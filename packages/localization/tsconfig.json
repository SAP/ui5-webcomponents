{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ES2021",
		// Generate d.ts files
		"declaration": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"moduleResolution": "node",
		"composite": true,
		"rootDir": "src",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"paths": {
			"@ui5/webcomponents-base/dist/*": ["../base/src/*"],
		},
	},
	"references": [
        { "path": "../base" }
    ]
}
