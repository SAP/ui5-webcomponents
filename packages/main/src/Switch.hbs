<div {{> controlData}}
	class="{{classes.main}}"
	role="checkbox"
	aria-checked="{{ctr.checked}}"
	tabindex="{{tabIndex}}">
		<span class="ui5-switch-track">
			<span class="ui5-switch-texton">{{textOn}}</span>
			<span class="ui5-switch-textoff">{{textOff}}</span>
		</span>
		<span id="{{ctr._id}}-handle" class="ui5-switch-handle"></span>
		<input type='checkbox' ?checked="{{ctr.checked}}" class="ui5-switch-input" data-sap-no-tab-ref/>
</div>