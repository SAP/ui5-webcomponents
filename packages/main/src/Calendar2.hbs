<div
	class="{{classes.main}}"
	style="{{styles.main}} "
>

	<ui5-calendar-header
		id="{{_id}}-head"
		month-text="{{_headerTexts.month}}"
		year-text="{{_headerTexts.year}}"
		._tabIndex="{{_headerTabIndex}}"
		._isPrevButtonDisabled="{{_headerButtonsState.prevDisabled}}"
		._isNextButtonDisabled="{{_headerButtonsState.nextDisabled}}"
		._isMonthButtonHidden="{{_isHeaderMonthButtonHidden}}"
		@ui5-previous-press="{{onHeaderPreviousPress}}"
		@ui5-next-press="{{onHeaderNextPress}}"
		@ui5-show-month-press="{{onHeaderShowMonthPress}}"
		@ui5-show-year-press="{{onHeaderShowYearPress}}"
	></ui5-calendar-header>

	<div id="{{_id}}-content">
		<ui5-daypicker
			id="{{_id}}-daypicker"
			class="{{classes.dayPicker}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{selectedDates}}"
			._hidden="{{_isDayPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.selection="{{selection}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedDatesChange}}"
			@ui5-navigate="{{onNavigate}}"
			?hide-week-numbers="{{hideWeekNumbers}}"
		></ui5-daypicker>

		<ui5-monthpicker
			id="{{_id}}-MP"
			class="{{classes.monthPicker}}"
			format-pattern="{{_formatPattern}}"
			._hidden="{{_isMonthPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedMonthChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-monthpicker>

		<ui5-yearpicker
			id="{{_id}}-YP"
			class="{{classes.yearPicker}}"
			format-pattern="{{_formatPattern}}"
			._hidden="{{_isYearPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedYearChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-yearpicker>
	</div>
</div>
