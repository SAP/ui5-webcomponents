<div class="ui5-radio-root {{classes.main}}"
	role="radio"
	aria-checked="{{checked}}"
	aria-readonly="{{ariaReadonly}}"
	aria-disabled="{{ariaDisabled}}"
	aria-label="{{ariaLabelText}}"
	aria-describedby="{{ariaDescribedBy}}"
	tabindex="{{tabIndex}}"
	dir="{{effectiveDir}}"
	@click="{{_onclick}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@mousedown="{{_onmousedown}}"
	@mouseup="{{_onmouseup}}"
	@focusout="{{_onfocusout}}"
>

	<div class='ui5-radio-inner {{classes.inner}}'>
		<svg class="ui5-radio-svg" focusable="false" aria-hidden="true">
			<circle class="ui5-radio-svg-outer" cx="50%" cy="50%" r="50%" />
			<circle class="ui5-radio-svg-inner" cx="50%" cy="50%" r="22%" />
		</svg>
 		<input type='radio' ?checked="{{checked}}" ?readonly="{{readonly}}" ?disabled="{{disabled}}" name="{{name}}" data-sap-no-tab-ref/>
	</div>

	{{#if text}}
		<ui5-label id="{{_id}}-label" class="ui5-radio-label" for="{{_id}}" wrapping-type="{{wrappingType}}">{{text}}</ui5-label>
	{{/if}}

	{{#if hasValueState}}
		<span id="{{_id}}-descr" class="ui5-hidden-text">{{valueStateText}}</span>
	{{/if}}
</div>
