<ui5-responsive-popover
	tokenizer-popover="true"
	style={{styles.popover}}
	class={{classes.popover}}
	?content-only-on-desktop="{{noValueStatePopover}}"
	hide-arrow
	placement-type="Bottom"
	horizontal-align="Left"
	@before-close={{handleBeforeClose}}
	@before-open="{{handleBeforeOpen}}"
>
	{{#unless _isPhone}}
		<div slot="header" class="ui5-responsive-popover-header" style="{{styles.popoverHeader}}">
			{{#unless noValueStatePopover}}
				<div class="{{classes.popoverValueState}}" style="{{styles.popoverValueStateMessage}}">
					<ui5-icon class="ui5-input-value-state-message-icon" name="{{_valueStateMessageIcon}}"></ui5-icon>
					{{#each valueStateMessageText}}
						{{this}}
					{{/each}}
				</div>
			{{/unless}}
		</div>
	{{/unless}}

	{{#if _isPhone}}
		<div slot="header" class="ui5-responsive-popover-header" style="{{styles.popoverHeader}}">
			<div class="row" style="{{styles.popoverHeaderTitle}}">
				<ui5-title level="H5" class="ui5-responsive-popover-header-text">{{morePopoverTitle}}</ui5-title>
				<ui5-button
					class="ui5-responsive-popover-close-btn"
					icon="decline"
					design="Transparent"
					@click="{{closeMorePopover}}"
				>
				</ui5-button>
			</div>
		</div>
		{{#unless noValueStatePopover}}
			<div class="{{classes.popoverValueState}}" style="{{styles.popoverValueStateMessage}}">
				<ui5-icon class="ui5-input-value-state-message-icon" name="{{_valueStateMessageIcon}}"></ui5-icon>
				{{#each valueStateMessageText}}
					{{this}}
				{{/each}}
			</div>
		{{/unless}}
	{{/if}}
	<ui5-list
		class="ui5-tokenizer-list"
		mode="Delete"
		@ui5-item-delete={{itemDelete}}
	>
		{{#each _tokens}}
			<ui5-li
				.tokenRef={{this}}
				wrapping-type="Normal"
			>
				{{this.text}}
			</ui5-li>
		{{/each}}
	</ui5-list>
	{{#if _isPhone}}
		<div slot="footer" class="ui5-responsive-popover-footer">
			<ui5-button
				id="ui5-tokenizer-dialog-confirm-btn"
				design="Emphasized"
				@click="{{closeMorePopover}}"
			>OK</ui5-button>
		</div>
	{{/if}}
</ui5-responsive-popover>