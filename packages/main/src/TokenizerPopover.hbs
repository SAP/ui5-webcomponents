<ui5-responsive-popover
	tokenizer-popover="true"
	?open="{{open}}"
	.opener="{{morePopoverOpener}}"
	style={{styles.popover}}
	content-only-on-desktop
	prevent-focus-restore
	?hide-arrow="{{hidePopoverArrow}}"
	placement="Bottom"
	horizontal-align="Start"
	@ui5-before-close="{{handleBeforeClose}}"
	@ui5-close="{{handleAfterClose}}"
	@ui5-before-open="{{handleBeforeOpen}}"
>
	{{#if _isPhone}}
		<div slot="header" class="ui5-responsive-popover-header">
			<div class="row">
				<ui5-title
					level="H5"
					wrapping-type="None"
					class="ui5-responsive-popover-header-text"
				>
					{{morePopoverTitle}}
				</ui5-title>
			</div>
		</div>
	{{/if}}
	<ui5-list
		class="ui5-tokenizer-list"
		selection-mode={{_nMoreListMode}}
		separators="None"
		@keydown="{{_onPopoverListKeydown}}"
		@ui5-item-delete={{itemDelete}}
	>
		{{#each _tokens}}
			{{#if _isVisible}}
				<ui5-li
					.tokenRef={{this}}
					wrapping-type="Normal"
				>
					{{this.text}}
				</ui5-li>
			{{/if}}
		{{/each}}
	</ui5-list>
	{{#if _isPhone}}
		<div slot="footer" class="ui5-responsive-popover-footer">
			<ui5-button
				design="Emphasized"
				data-ui5-tokenizer-dialog-ok-button
				@click="{{handleDialogButtonPress}}"
			>OK</ui5-button>
			<ui5-button
				design="Transparent"
				@click="{{handleDialogButtonPress}}"
			>Cancel</ui5-button>
		</div>
	{{/if}}
</ui5-responsive-popover>