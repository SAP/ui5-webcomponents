<div class="{{classes.root}}"
	id="{{_id}}"
	role="note"
	dir="{{effectiveDir}}"
	aria-live="assertive"
	aria-labelledby="{{_id}}"
>

	{{#unless hideIcon}}
		<div
		class="ui5-messagestrip-icon-wrapper"
		aria-hidden="true"
		>
			{{#if iconProvided}}
				<slot name="icon"></slot>
			{{else}}
				<ui5-icon name="{{standardIconName}}" class="ui5-messagestrip-icon"></ui5-icon>
			{{/if}}
		</div>
	{{/unless}}

	<span class="ui5-hidden-text">{{hiddenText}}</span>
	<span class="ui5-messagestrip-text"><slot></slot></span>

	{{#unless hideCloseButton}}
		<ui5-button
			icon="decline"
			design="Transparent"
			class="ui5-messagestrip-close-button"
			title="{{_closeButtonText}}"
			@click={{_closeClick}}
		></ui5-button>
	{{/unless}}
</div>
