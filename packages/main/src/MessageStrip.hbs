<div class="{{classes.main}}"
	role="alert"
	aria-live="assertive"
	aria-labelledby="{{_id}}">

	{{#unless noIcon}}
		<ui5-icon-svg class="ui5-messagestrip-icon" src="{{messageStripIcon}}"></ui5-icon-svg>
	{{/unless}}

	<span class="ui5-hidden-text">{{hiddenText}}</span>
	<span class="{{classes.label}}"><slot></slot></span>

	{{#unless noCloseButton}}
		<div
			class="ui5-messagestrip-close-icon-wrapper"
			tabindex="0"
			@click={{_closeClick}}
			@keydown={{_closeKeyDown}}
			@keyup={{_closeKeyUp}}
		>
			<ui5-icon-svg
				src="sap-icon://decline"
				role="button"
				title="{{_closeButtonText}}"
			</ui5-icon-svg>
		</div>
	{{/unless}}
</div>
