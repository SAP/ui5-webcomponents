<div class="{{classes.main}}">
	{{#unless hideIcon}}
		<ui5-icon class="ui5-messagestrip-icon" src="{{messageStripIcon}}"></ui5-icon>
	{{/unless}}

	<span class="{{classes.label}}"><slot></slot></span>

	{{#unless noCloseButton}}
		<ui5-icon
			class="{{classes.closeIcon}}"
			src="sap-icon://decline"
			tabindex="0"
			@ui5-press="{{_closeButton.press}}">
		</ui5-icon>
	{{/unless}}
</div>
