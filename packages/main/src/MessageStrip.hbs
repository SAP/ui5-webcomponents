<div class="{{classes.root}}"
	role="alert"
	dir="{{effectiveDir}}"
	aria-live="assertive"
>

	{{#unless noIcon}}
		<div class="ui5-messagestrip-icon-wrapper">
			{{#if iconProvided}}
				<slot name="icon"></slot>
			{{else}}
				<ui5-icon name="{{standardIconName}}" class="ui5-messagestrip-icon"></ui5-icon>
			{{/if}}
		</div>
	{{/unless}}

	<span id="{{_id}}-hidden-text" class="ui5-hidden-text">{{hiddenText}}</span>
	<span id="{{_id}}-text" class="ui5-messagestrip-text"><slot></slot></span>

	{{#unless noCloseButton}}
		<ui5-button
				icon="decline"
				icon-size=".75rem"
				design="Transparent"
				class="ui5-messagestrip-close-button"
				title="{{_closeButtonText}}"
				aria-label="{{closeButtonAriaLabel}}"
				@click={{_closeClick}}
		></ui5-button>
	{{/unless}}
</div>
