<div class="{{classes.main}}"
	id="{{ctr._id}}"
	role="alert"
	aria-live="assertive"
	aria-labelledby="{{ctr._id}}">

	{{#unless ctr.hideIcon}}
		<ui5-icon class="ui5-messagestrip-icon" src="{{icon}}"></ui5-icon>
	{{/unless}}

	<span class="ui5-messagestrip-hidden-text">{{hiddenText}}</span>
	<span class="{{classes.label}}"><slot></slot></span>

	{{#unless ctr.hideCloseButton}}
		<ui5-icon
			class="{{classes.closeIcon}}"
			src="sap-icon://decline"
			tabindex="0"
			role="button"
			title="{{ctr._closeButtonText}}"
			@ui5-press="{{ctr._closeButton.press}}">
		</ui5-icon>
	{{/unless}}
</div>
