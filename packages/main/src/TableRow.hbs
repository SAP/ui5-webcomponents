<div {{> controlData}}
	class="{{classes.main}}"
	style="{{styles.main}}"
	tabindex="{{ctr._tabIndex}}"
>
	{{#each visibleCells}}
		<div class="{{../classes.cellWrapper}}">
			<slot name="{{this._individualSlot}}"></slot>
		</div>
	{{/each}}

	{{#each popinCells}}
		<div class="{{../classes.popin}}"
			style="grid-column-end: {{../visibleColumnLength}}" >

			<span class="{{../classes.popinTitle}}">{{this.popinText}}</span>
			<div>
				<slot name="{{this.cell._individualSlot}}"></slot>
			</div>
		</div>
	{{/each}}

</div>
