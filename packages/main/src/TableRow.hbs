<tr
	class="ui5-table-row-root"
	tabindex="{{_tabIndex}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@click="{{_onrowclick}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@mouseup="{{_onmouseup}}"
	@touchstart="{{_ontouchstart}}"
	@touchend="{{_ontouchend}}"
	aria-label="{{ariaLabelText}}"
	aria-selected="{{this.selected}}"
	aria-current="{{_ariaCurrent}}"
	data-sap-focus-ref
	part="row"
	data-ui5-dir="{{effectiveDir}}"
>

	{{#if isMultiSelect}}
		<td
			class="ui5-table-multi-select-cell"
			aria-hidden="true"
			role="presentation"
		>
			<ui5-checkbox
				class="ui5-multi-select-checkbox"
				?checked="{{this.selected}}"
				aria-label="{{ariaLabelRowSelection}}"
				@ui5-change="{{_handleSelection}}"
				tabindex="-1"
			>
			</ui5-checkbox>
		</td>
	{{/if}}

	{{#if shouldPopin}}
		{{#each visibleCells}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	{{else}}
		{{#each cells}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	{{/if}}

	<td class="ui5-table-row-navigated">
		<div class="ui5-table-div-navigated"></div>
	</td>
</tr>

{{#if shouldPopin}}
	{{#each popinCells}}
		<tr part="popin-row" class="{{this.classes}}"
			@click="{{../_onrowclick}}"
			@keydown="{{../_onkeydown}}"
			@keyup="{{../_onkeyup}}">
			<td colspan="{{../visibleCellsCount}}" role="cell">
				{{#if this.popinText}}
					<span class="ui5-table-row-popin-title">{{this.popinText}}:</span>
				{{/if}}
				<div>
					<slot name="{{this.cell._individualSlot}}"></slot>
				</div>
			</td>

			<td class="ui5-table-row-navigated">
				<div class="ui5-table-div-navigated"></div>
			</td>
		</tr>
	{{/each}}
{{/if}}


