<tr
	class="ui5-table-row-root"
	tabindex="{{_tabIndex}}"
	@focusin="{{_onfocusin}}"
	@click="{{_onrowclick}}"
	data-sap-focus-ref
	part="row"
>
	{{#if shouldPopin}}
		{{#each visibleCells}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	{{else}}
		{{#each cells}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	{{/if}}
</tr>

{{#if shouldPopin}}
	{{#each popinCells}}
		<tr part="popin-row" class="{{this.classes}}" @click="{{../_onrowclick}}">
			<td colspan="{{../visibleCellsCount}}">
				{{#if this.popinText}}
					<span class="ui5-table-row-popin-title">{{this.popinText}}:</span>
				{{/if}}
				<div>
					<slot name="{{this.cell._individualSlot}}"></slot>
				</div>
			</td>
		</tr>
	{{/each}}
{{/if}}
