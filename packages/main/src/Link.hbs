<a
	class="ui5-link-root"
	role="{{effectiveAccRole}}"
	href="{{parsedRef}}"
	target="{{target}}"
	rel="{{_rel}}"
	tabindex="{{effectiveTabIndex}}"
	title="{{tooltip}}"
	?disabled="{{disabled}}"
	aria-label="{{ariaLabelText}}"
	aria-haspopup="{{_hasPopup}}"
	aria-expanded="{{accessibilityAttributes.expanded}}"
	@focusin={{_onfocusin}}
	@focusout={{_onfocusout}}
	@click={{_onclick}}
	@keydown={{_onkeydown}}
	@keyup={{_onkeyup}}>

	{{#if icon}}
		<ui5-icon
			class="ui5-link-icon"
			name="{{icon}}"
			mode="{{iconMode}}"
			part="icon">
		</ui5-icon>
	{{/if}}

	<span class="ui5-link-text">
		<slot></slot>
	</span>
	{{#if hasLinkType}}
		<span class="ui5-hidden-text">{{linkTypeText}}</span>
	{{/if}}

	{{#if endIcon}}
		<ui5-icon
			class="ui5-link-end-icon"
			name="{{endIcon}}"
			mode="{{endIconMode}}"
			part="endIcon"
		></ui5-icon>
	{{/if}}
</a>
