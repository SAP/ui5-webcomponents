<div
	class="{{classes.main}}"
	@focusin="{{onfocusin}}"
>
	<!-- header -->
	{{#if header}}
		<slot name="header" />
	{{/if}}
	{{#if shouldRenderH1}}
		<header id="{{_id}}-header" class="sapMListHdr sapMListHdrText">
			{{headerText}}
		</header>
	{{/if}}

	<div id="{{_id}}-before" tabindex="0" class="sapMListDummyArea"></div>

	<ul id="{{_id}}-listUl" class="{{classes.ul}}">
        <slot></slot>

		{{#if showNoDataText}}
			<li id="{{_id}}-nodata" class="{{classes.noData}}" tabindex="{{noDataTabIndex}}">
				<div id="{{_id}}-nodata-text" class="sapMListNoDataText">
					{{noDataText}}
				</div>
			</li>
		{{/if}}
	</ul>

	{{#if footerText}}
		<footer id="{{_id}}-footer" class="sapMListFtr">
			{{footerText}}
		</footer>
	{{/if}}

	<div id="{{_id}}-after" tabindex="0" class="sapMListDummyArea"></div>
</div>
