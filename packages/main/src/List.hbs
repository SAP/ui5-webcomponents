<div
	class="ui5-list-root"
	@focusin="{{_onfocusin}}"
	@keydown="{{_onkeydown}}"
>
	<!-- header -->
	{{#if header.length}}
		<slot name="header" />
	{{/if}}
	{{#if shouldRenderH1}}
		<header id="{{_id}}-header" class="ui5-list-header">
			{{headerText}}
		</header>
	{{/if}}

	<div id="{{_id}}-before" tabindex="0" class="ui5-list-focusarea"></div>

	<ul id="{{_id}}-listUl" class="ui5-list-ul">
		<slot></slot>

		{{#if showNoDataText}}
			<li id="{{_id}}-nodata" class="ui5-list-nodata" tabindex="{{noDataTabIndex}}">
				<div id="{{_id}}-nodata-text" class="ui5-list-nodata-text">
					{{noDataText}}
				</div>
			</li>
		{{/if}}
	</ul>

	{{#if footerText}}
		<footer id="{{_id}}-footer" class="ui5-list-footer">
			{{footerText}}
		</footer>
	{{/if}}

	<div id="{{_id}}-after" tabindex="0" class="ui5-list-focusarea"></div>
</div>
