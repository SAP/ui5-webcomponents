<ui5-responsive-popover
	id="{{_id}}-menu-rp"
	class="ui5-menu-rp"
	horizontal-align="Start"
	placement={{placement}}
	vertical-align={{verticalAlign}}
	hide-arrow
	allow-target-overlap
	?sub-menu={{_isSubMenu}}
	@ui5-before-open={{_beforePopoverOpen}}
	@ui5-after-open={{_afterPopoverOpen}}
	@ui5-before-close={{_beforePopoverClose}}
	@ui5-after-close={{_afterPopoverClose}}
>
{{#if isPhone}}
	<div
		slot="header"
		class="ui5-menu-dialog-header"
	>
	{{#if isSubMenuOpen}}
		<ui5-button
			icon="nav-back"
			class="ui5-menu-back-button"
			design="Transparent"
			aria-label="{{labelBack}}"
			@click={{_navigateBack}}
		>
		</ui5-button>
	{{/if}}
		<div
			class="ui5-menu-dialog-title"
		>
			<div>
				{{menuHeaderTextPhone}}
			</div>
		</div>
		<ui5-button
			icon="decline"
			design="Transparent"
			aria-label="{{labelClose}}"
			@click={{_closeAll}}
		>
		</ui5-button>
	</div>
{{/if}}
	<div
		id="{{_id}}-menu-main"
	>
	{{#if items.length}}
		<ui5-list
			id="{{_id}}-menu-list"
			selection-mode="None"
			?loading="{{loading}}"
			loading-delay="{{loadingDelay}}"
			separators="None"
			accessible-role="menu"
			@ui5-item-click={{_itemClick}}
			@mouseover={{_loadingMouseOver}}
			@mouseout={{_itemMouseOut}}
			@keydown={{_itemKeyDown}}
			
		>
			<slot></slot>
		</ui5-list>
	{{else if loading}}
		<ui5-busy-indicator
			id="{{_id}}-menu-busy-indicator"
			delay="{{loadingDelay}}"
			class="ui5-menu-busy-indicator"
			@mouseover="{{_loadingMouseOver}}"
			active>
		</ui5-busy-indicator>
	{{/if}}
	</div>
</ui5-responsive-popover>

<div
	class="ui5-menu-submenus"
>
</div>