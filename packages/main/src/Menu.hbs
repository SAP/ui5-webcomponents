<ui5-responsive-popover
	id="{{_id}}-menu-rp"
	class="ui5-menu-rp"
	horizontal-align="Start"
	placement="Bottom"
	vertical-align="Bottom"
	.opener={{opener}}
	?open={{open}}
	prevent-initial-focus
	hide-arrow
	allow-target-overlap
	@ui5-before-open={{_beforePopoverOpen}}
	@ui5-open={{_afterPopoverOpen}}
	@ui5-before-close={{_beforePopoverClose}}
	@ui5-close={{_afterPopoverClose}}
>
{{#if isPhone}}
	<div
		slot="header"
		class="ui5-menu-dialog-header"
	>
		<div
			class="ui5-menu-dialog-title"
		>
			<div>
				{{headerText}}
			</div>
		</div>
		<ui5-button
			icon="decline"
			design="Transparent"
			aria-label="{{labelClose}}"
			@click={{_close}}
		>
		</ui5-button>
	</div>
{{/if}}
	<div
		id="{{_id}}-menu-main"
	>
	{{#if items.length}}
		<ui5-list
			id="{{_id}}-menu-list"
			selection-mode="None"
			?loading="{{loading}}"
			loading-delay="{{loadingDelay}}"
			separators="None"
			accessible-role="Menu"
			@ui5-item-click={{_itemClick}}
			@ui5-close-menu={{_close}}
			@mouseover={{_itemMouseOver}}
			@keydown={{_itemKeyDown}}
		>
			<slot></slot>
		</ui5-list>
	{{else if loading}}
		<ui5-busy-indicator
			id="{{_id}}-menu-busy-indicator"
			delay="{{loadingDelay}}"
			class="ui5-menu-busy-indicator"
			active>
		</ui5-busy-indicator>
	{{/if}}
	</div>
</ui5-responsive-popover>