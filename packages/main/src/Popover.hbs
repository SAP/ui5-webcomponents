<span {{> controlData}} class="{{classes.frame}}">
	<span id="{{ctr._id}}-firstfe" tabindex="0" @focusin={{focusHelper.forwardToLast}}></span>	
	<div style="{{styles.main}}" role="dialog" aria-labelledby="{{headerId}}" tabindex="-1" class="{{classes.main}}">
			{{> header}}
			<div id="{{ctr._id}}-content" role="application" style="{{styles.content}}" class="sapMPopupContent">
				<div class="sapMPopupScroll">
					<slot></slot>
				</div>
			</div>
			{{> footer}}
			<span id="{{ctr._id}}-arrow" style="{{styles.arrow}}" class="{{classes.arrow}}"></span>
		</div>
	<span id="{{ctr._id}}-lastfe" tabindex="0" @focusin={{focusHelper.forwardToFirst}}></span>
	<div tabindex="0" id="{{ctr._id}}-blocklayer" style="{{styles.blockLayer}}" class="{{classes.blockLayer}}"></div>
</span>

{{#*inline "header"}}
	{{#unless ctr.hideHeader}}
		<header>
			{{#if ctr.header}}
				<div role="toolbar" class="sapMPopupHeader">
					<slot name="header"></slot>
				</div>
			{{else}}
				<h2 role="toolbar" class="sapMPopupHeader sapMPopupHeaderText">{{ctr.headerText}}</h2>
			{{/if}}
		</header>
	{{/unless}}
{{/inline}}

{{#*inline "footer"}}
	{{#if ctr.footer}}
		<footer>
			<div class="sapMPopupFooter">
				<slot name="footer"></slot>
			</div>
		</footer>
	{{/if}}
{{/inline}}
