<div class="ui5-popover-root">

	<span class="ui5-popover-arr" style="{{styles.arrow}}"></span>

	{{#if header.length }}
		<div class="ui5-popover-header-root">
			<slot name="header"></slot>
		</div>
	{{else}}
		<h2 class="ui5-popup-header-text">{{headerText}}</h2>
	{{/if}}

	<span class="first-fe" tabindex="0" @focusin={{forwardToLast}}></span>	

	<div class="ui5-popover-content">
			<slot></slot>
	</div>

	<span class="last-fe" tabindex="0" @focusin={{forwardToFirst}}></span>

	{{#if footer.length }}
		<div class="ui5-popover-footer-root">
			<slot name="footer"></slot>
		</div>
	{{/if}}

</div>