{{#if isPhone}}
	<ui5-dialog
		stretch
		_disable-initial-focus="true"
		@ui5-afterOpen="{{_fireEvent}}"
		@ui5-beforeOpen="{{_fireEvent}}"
		@ui5-beforeClose="{{_fireEvent}}"
		@ui5-afterClose="{{_fireEvent}}"
	>
		<div slot="header" class="ui5-responsive-popover-header">
			<div class="row">
				<span>{{headerTitle}}</span>
				<ui5-button
					icon="decline"
					design="Transparent"
					@click="{{close}}"
				>
				</ui5-button>
			</div>
			<slot name="phoneHeader"></slot>
		</div>
		<slot></slot>
		{{#if _hasFooter}}
			<div slot="footer" class="ui5-responsive-popover-footer">
				<div style="flex: 1;"></div>
				{{#if showConfirmButton}}
					<ui5-button design="Emphasized" @click="{{_handleClose}}" confirm>OK</ui5-button>
				{{/if}}
				{{#if showCancelButton}}
					<ui5-button @click="{{_handleClose}}" cancel>Cancel</ui5-button>
				{{/if}}
			</div>
		{{/if}}
	</ui5-dialog>
{{else}}
	<ui5-popover
		placement-type="Bottom"
		horizontal-align="Left"
		style="min-width: {{_width}}px;"
		?stay-open-on-scroll="{{stayOpenOnScroll}}"
		?allow-target-overlap="{{allowTargetOverlap}}"
		no-arrow
		_disable-initial-focus
		@ui5-afterOpen="{{_fireEvent}}"
		@ui5-beforeOpen="{{_fireEvent}}"
		@ui5-beforeClose="{{_fireEvent}}"
		@ui5-afterClose="{{_fireEvent}}"
	>
		<slot></slot>
	</ui5-popover>
{{/if}}