{{#if _isPhone}}
	<ui5-dialog
		class="ui5-responsive-popover-inner"
		stretch
		?with-padding={{withPadding}}
		_disable-initial-focus
		@ui5-afterOpen="{{_afterOpen}}"
		@ui5-beforeOpen="{{_beforeOpen}}"
		@ui5-beforeClose="{{_beforeClose}}"
		@ui5-afterClose="{{_afterClose}}"
	>
		{{#if _hasHeader}}
			<div slot="header" class="ui5-responsive-popover-header">
				{{#if showHeaderTitle}}
					<div class="row">
						<span>{{_headerTitleText}}</span>
						<ui5-button
							icon="decline"
							design="Transparent"
							@click="{{close}}"
						>
						</ui5-button>
					</div>
				{{/if}}
				<slot name="header"></slot>
			</div>
		{{/if}}

		<slot></slot>

		{{#if _hasFooter}}
			<div slot="footer" class="ui5-responsive-popover-footer">
				<div style="flex: 1;"></div>
				{{#if showConfirmButton}}
					<ui5-button design="Emphasized" @click="{{_handleClose}}" confirm>OK</ui5-button>
				{{/if}}
				{{#if showCancelButton}}
					<ui5-button design="Transparent" @click="{{_handleClose}}" cancel>Cancel</ui5-button>
				{{/if}}
			</div>
		{{/if}}
	</ui5-dialog>
{{else}}
	<ui5-popover
		class="ui5-responsive-popover-inner"
		placement-type="Bottom"
		horizontal-align="{{horizontalAlign}}"
		style="min-width: {{_width}}px;"
		?stay-open-on-scroll="{{stayOpenOnScroll}}"
		?allow-target-overlap="{{allowTargetOverlap}}"
		no-arrow
		_disable-initial-focus
		@ui5-afterOpen="{{_afterOpen}}"
		@ui5-beforeOpen="{{_beforeOpen}}"
		@ui5-beforeClose="{{_beforeClose}}"
		@ui5-afterClose="{{_afterClose}}"
	>
		<slot></slot>
	</ui5-popover>
{{/if}}