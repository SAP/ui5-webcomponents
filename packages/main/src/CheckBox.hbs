<div
	class="ui5-checkbox-root {{classes.main}}"
	role="checkbox"
	aria-checked="{{ariaChecked}}"
	aria-readonly="{{ariaReadonly}}"
	aria-disabled="{{ariaDisabled}}"
	aria-labelledby="{{ariaLabelledBy}}"
	aria-describedby="{{ariaDescribedBy}}"
	tabindex="{{tabIndex}}"
	@mousedown="{{_onmousedown}}"
	@mouseup="{{_onmouseup}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@click="{{_onclick}}"
	@focusout="{{_onfocusout}}"
	dir="{{effectiveDir}}"
>
		<div id="{{_id}}-CbBg" class="ui5-checkbox-inner">
			{{#if isCompletelyChecked}}
				<ui5-icon aria-hidden="true" name="accept" class="ui5-checkbox-icon"></ui5-icon>

				<svg aria-hidden="true" viewBox="0 0 14 14" xmlns="http://www.w3.org/2000/svg" class="ui5-checkbox-custom-icon">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M11.7071 3.29289C12.0976 3.68342 12.0976 4.31658 11.7071 4.70711L5.70711 10.7071C5.31658 11.0976 4.68342 11.0976 4.29289 10.7071L2.29289 8.7071C1.90237 8.3166 1.90237 7.68342 2.29289 7.29289C2.68342 6.90237 3.31658 6.90237 3.70711 7.29289L5 8.5858L10.2929 3.29289C10.6834 2.90237 11.3166 2.90237 11.7071 3.29289Z" />
				</svg>
			{{/if}}

			<input
				id="{{_id}}-CB"
				type='checkbox'
				?checked="{{checked}}"
				?readonly="{{readonly}}"
				?disabled="{{disabled}}"
				tabindex="-1"
				aria-hidden="true"
				data-sap-no-tab-ref
			/>
		</div>

		{{#if text}}
			<ui5-label id="{{_id}}-label" class="ui5-checkbox-label" wrapping-type="{{wrappingType}}">{{text}}</ui5-label>
		{{/if}}

		{{#if hasValueState}}
			<span id="{{_id}}-descr" class="ui5-hidden-text">{{valueStateText}}</span>
		{{/if}}

		<slot name="formSupport"></slot>
</div>
