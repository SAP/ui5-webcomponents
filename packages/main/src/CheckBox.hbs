<div
	class="{{classes.main}}"
	role="checkbox"
	aria-checked="{{checked}}"
	aria-readonly="{{ariaReadonly}}"
	aria-disabled="{{ariaDisabled}}"
	tabindex="{{tabIndex}}"
	dir="{{rtl}}"
>
		<div id="{{_id}}-CbBg" class="{{classes.inner}}">
			{{#if checked}}
				<ui5-icon src="sap-icon://accept" class="ui5-checkbox-icon"></ui5-icon>
			{{/if}}
				
			<input id="{{_id}}-CB" type='checkbox' ?checked="{{checked}}" ?readonly="{{readonly}}" ?disabled="{{disabled}}" data-sap-no-tab-ref/>
		</div>

		{{#if _label.text}}
			<ui5-label class="ui5-checkbox-label" ?wrap="{{_label.wrap}}">{{_label.text}}</ui5-label>
		{{/if}}

		<slot name="formSupport"></slot>
</div>
