<div
		class="ui5-datepicker-root"
		style="{{styles.main}}"
		@keydown={{_onkeydown}}
>
	<!-- INPUT -->
	<ui5-input
			id="{{_id}}-inner"
			class="ui5-datepicker-input"
			placeholder="{{_placeholder}}"
			type="{{type}}"
			value="{{value}}"
			?disabled="{{disabled}}"
			?readonly="{{readonly}}"
			value-state="{{valueState}}"
			@ui5-change="{{_handleInputChange}}"
			@ui5-input="{{_handleInputLiveChange}}"
			data-sap-focus-ref
			._inputAccInfo ="{{accInfo}}"
	>
		{{#unless readonly}}
			<ui5-icon
				slot="icon"
				name="appointment-2"
				tabindex="-1"
				accessible-name="{{openIconTitle}}"
				show-tooltip
				@click="{{togglePicker}}"
				input-icon
				?pressed="{{_isPickerOpen}}"
				dir="{{dir}}"
			></ui5-icon>
		{{/unless}}
	</ui5-input>

	<!-- POPOVER -->
	<ui5-responsive-popover
			id="{{_id}}--respPopover"
			allow-target-overlap="{{_respPopoverConfig.allowTargetOverlap}}"
			header-title="Date Picker"
			no-arrow
			stay-open-on-scroll="{{_respPopoverConfig.stayOpenOnScroll}}"
			@ui5-afterClose="{{_respPopoverConfig.afterClose}}"
			@ui5-afterOpen="{{_respPopoverConfig.afterOpen}}"
	>
		<ui5-calendar
				id="{{_id}}-calendar"
				primary-calendar-type="{{_calendar.primaryCalendarType}}"
				format-pattern="{{_calendar.formatPattern}}"
				timestamp="{{_calendar.timestamp}}"
				.selectedDates="{{_calendar.selectedDates}}"
				@ui5-selectedDatesChange="{{_calendar.onSelectedDatesChange}}"
		></ui5-calendar>
	</ui5-responsive-popover>
	<slot name="formSupport"></slot>
</div>
