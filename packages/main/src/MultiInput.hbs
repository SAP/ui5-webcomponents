{{>include "./Input.hbs"}}

{{#*inline "preContent"}}
	<span id="hiddenText-nMore" class="ui5-hidden-text">{{_tokensCountText}}</span>
	<ui5-tokenizer
		class="ui5-multi-input-tokenizer"
		.opener={{morePopoverOpener}}
		.popoverMinWidth={{_inputWidth}}
		hide-popover-arrow
		?expanded="{{tokenizerExpanded}}"
		@keydown="{{_onTokenizerKeydown}}"
		@ui5-token-delete={{tokenDelete}}
		@focusout="{{_tokenizerFocusOut}}"
	>
		{{#each tokens}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	</ui5-tokenizer>
{{/inline}}


{{#*inline "postContent"}}
	{{#if showValueHelpIcon}}
		<ui5-icon
			@click={{valueHelpPress}}
			@mousedown={{valueHelpMouseDown}}
			@mouseup={{valueHelpMouseUp}}
			class="ui5-input-icon"
			name="value-help"
		></ui5-icon>
	{{/if}}
{{/inline}}
