{{>include "./Input.hbs"}}

{{#*inline "preContent"}}
	<span id="hiddenText-nMore" class="ui5-hidden-text">{{_tokensCountText}}</span>
	<ui5-tokenizer
		class="ui5-multi-input-tokenizer"
		.morePopoverOpener={{morePopoverOpener}}
		.popoverMinWidth={{_inputWidth}}
		.valueState={{valueState}}
		?expanded="{{expandedTokenizer}}"
		show-more
		@keydown="{{_onTokenizerKeydown}}"
		@ui5-show-more-items-press={{showMorePress}}
		@ui5-token-delete={{tokenDelete}}
		@focusout="{{_tokenizerFocusOut}}"
	>
		<slot name="tokens"></slot>
		{{#if valueStateOpen}}
			<div slot="valueStateMessage">
				{{#if shouldDisplayDefaultValueStateMessage}}
					{{valueStateText}}
				{{else}}
					<slot name="valueStateMessage"></slot>
				{{/if}}
			</div>
		{{/if}}
	</ui5-tokenizer>
{{/inline}}


{{#*inline "postContent"}}
	{{#if showValueHelpIcon}}
		<ui5-icon
			@click={{valueHelpPress}}
			@mousedown={{valueHelpMouseDown}}
			@mouseup={{valueHelpMouseUp}}
			input-icon
			name="value-help"
		></ui5-icon>
	{{/if}}
{{/inline}}
