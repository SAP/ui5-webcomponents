{{>include "./Popup.hbs"}}

{{#*inline "beforeContent"}}
	<header
		class="ui5-popup-header-root"
		id="ui5-popup-header"
		@mousedown="{{_onDragMouseDown}}">
		{{#if header.length }}
			<slot name="header"></slot>
		{{else}}
			<h2 class="ui5-popup-header-text">{{headerText}}</h2>
		{{/if}}
	</header>
{{/inline}}

{{#*inline "afterContent"}}
	{{#if footer.length }}
		<footer class="ui5-popup-footer-root">
			<slot name="footer"></slot>
		</footer>
	{{/if}}
	{{#if resizable}}
		<ui5-icon
			name="resize-corner"
			dir="{{effectiveDir}}"
			class="ui5-popup-resize-handle"
			@mousedown="{{_onResizeMouseDown}}">
		</ui5-icon>
	{{/if}}
{{/inline}}

