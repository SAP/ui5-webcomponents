<span {{> controlData}} class="{{classes.frame}}">
	<span id="{{ctr._id}}-firstfe" tabindex="0"></span>
	<div style="{{styles.zindex}}" class="{{classes.dialogParent}}">
		<div tabindex="-1" aria-labelledby="{{headerId}}" role="dialog" class="{{classes.main}}">
			{{> header}}
			<section class="sapMDialogSection">
				<div style="{{styles.content}}" class="sapMPopupContent">
					<div class="sapMPopupScroll">
						{{#each ctr.content}}
							<slot name="{{this._slot}}"></slot>
						{{/each}}
					</div>
				</div>
			</section>
			{{> footer}}
		</div>
	</div>
	<span id="{{ctr._id}}-lastfe" tabindex="0"></span>
	<div tabindex="0" id="{{ctr._id}}-blocklayer" style="{{styles.blockLayer}}" class="{{classes.blockLayer}}"></div>
</span>

{{#*inline "header"}}
	{{#unless ctr.hideHeader}}
		<header>
			{{#if ctr.header}}
				<div role="heading" class="sapMPopupHeader">
					<slot name="{{ctr.header._slot}}"></slot>
				</div>
			{{else}}
				<h2 role="heading" class="sapMPopupHeader sapMPopupHeaderText">{{ctr.headerText}}</h2>
			{{/if}}
		</header>
	{{/unless}}
{{/inline}}

{{#*inline "footer"}}
	{{#if ctr.footer}}
		<footer>
			<div class="sapMPopupFooter">
				<slot name="{{ctr.footer._slot}}"></slot>
			</div>
		</footer>
	{{/if}}
{{/inline}}