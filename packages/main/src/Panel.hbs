<div
	data-sap-ui-fastnavgroup="true"
	class="{{classes.main}}"
	role="{{accRole}}"
>
	<!-- header: either header or h1 with header text -->
	{{#if fixed}}
		{{> header}}
	{{else}}
		<header
			@click="{{_headerClick}}"
			@keydown="{{_headerKeyDown}}"
			@keyup="{{_headerKeyUp}}"
			class="{{classes.header}}"
			tabindex="{{headerTabIndex}}"
		>
			<div class="sapMPanelIconOuter"
				tabindex="{{iconTabIndex}}"
				aria-expanded="{{expanded}}"
				aria-labelledby="{{ariaLabelledBy}}"
				title="{{_icon.title}}"
				>
				<ui5-icon
					class="{{classes.icon}}"
					src="{{_icon.src}}"
				></ui5-icon>
			</div>
			{{> header}}
		</header>
	{{/if}}

	<!-- content area -->
	<div class="{{classes.content}}" tabindex="-1" style="{{styles.content}}">
		<slot></slot>
	</div>
</div>

{{#*inline "header"}}
	{{#if header.length}}
		<div class="sapMPanelHdrToolbar">
			<slot name="header"></slot>
		</div>
	{{/if}}
	{{#if shouldRenderH1}}
		<h1 id="{{_id}}-header" class="sapMPanelHdr">
			{{headerText}}
		</h1>
	{{/if}}
{{/inline}}
