<div {{> controlData}}
		data-sap-ui-fastnavgroup="true"
		class="{{classes.main}}"
		style="{{styles.main}}"
		role="{{accRole}}"
>
	<!-- header: either header or h1 with header text -->
	{{#if ctr.fixed}}
		{{> header}}
	{{else}}
		<header @click="{{ctr._header.press}}" class="{{classes.header}}" tabindex="{{headerTabIndex}}">
			<ui5-icon
				class="{{classes.icon}}"
				src="{{ctr._icon.src}}"
				title="{{ctr._icon.title}}"
				tabindex="{{iconTabIndex}}"
				aria-expanded="{{expanded}}"
				aria-labelledby="{{ariaLabelledBy}}"
				@press="{{ctr._icon.press}}"
			></ui5-icon>
			{{> header}}
		</header>
	{{/if}}

	<!-- content area -->
	<div class="{{classes.content}}" tabindex="-1" style="{{styles.content}}">
        <slot></slot>
	</div>
</div>

{{#*inline "header"}}
	{{#if ctr.header}}
		<div class="sapMPanelHdrToolbar">
			<slot name="header"></slot>
		</div>
	{{/if}}
	{{#if shouldRenderH1}}
		<h1 id="{{ctr._id}}-header" class="sapMPanelHdr">
			{{ctr.headerText}}
		</h1>
	{{/if}}
{{/inline}}
