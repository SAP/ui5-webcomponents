<div
	style="display: grid; place-items: center;">

	<!-- columns -->
	<div class="ui5-table-header" style="{{styles.main}}">
		{{#each visibleColumns}}
			<div class="ui5-table-column-root">
				<slot name="{{this._individualSlot}}"></slot>
			</div>
		{{/each}}
	</div>

	<!-- rows -->
	{{#each rows}}
		<div style="width: 100%">
			<slot name="{{this._individualSlot}}"></slot>
		</div>
	{{/each}}

	{{#unless rows.length}}
		{{#if showNoData}}
			<div id="noData" class="ui5-table-no-data-row">
				<span>{{noDataText}}</span>
		</div>
		{{/if}}
	{{/unless}}
</div>
