<div {{> controlData}}
	style="display: grid; place-items: center;">

	<!-- columns -->
	<div class="{{classes.main}}" style="{{styles.main}}">
		{{#each visibleColumns}}
			<div class="sapWCTableColumnWrapper">
				<slot name="{{this._slot}}"></slot>
			</div>
		{{/each}}
	</div>

	<!-- rows -->
	{{#each ctr.rows}}
		<div style="width: 100%"
		>
			<slot name="{{this._slot}}"></slot>
		</div>
	{{/each}}
</div>