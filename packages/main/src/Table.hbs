<div {{> controlData}}
	style="display: grid; place-items: center;">

	<!-- columns -->
	<div class="{{classes.main}}" style="{{styles.main}}">
		{{#each visibleColumns}}
			<div class="sapWCTableColumnWrapper">
				<slot name="{{this._individualSlot}}"></slot>
			</div>
		{{/each}}
	</div>

	<!-- rows -->
	{{#each ctr.rows}}
	<div style="width: 100%">
    <slot name="{{this._individualSlot}}"></slot>
	</div>
	{{/each}}

	{{#unless ctr.rows.length}}
		{{#if ctr.showNoData}}
			<div style="width: 100%">
				<div id="noData" class="sapWCTableNoDataRow">
					<span>{{ctr.noDataText}}</span>
				</div>
			</div>
		{{/if}}
	{{/unless}}
</div>
