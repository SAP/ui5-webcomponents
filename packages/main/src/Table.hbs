<div
	style="display: grid; place-items: center;" dir="{{rtl}}">

	<!-- columns -->
	<div class="{{classes.main}}" style="{{styles.main}}">
		{{#each visibleColumns}}
			<div class="sapWCTableColumnWrapper">
				<slot name="{{this._individualSlot}}"></slot>
			</div>
		{{/each}}
	</div>

	<!-- rows -->
	{{#each rows}}
		<div style="width: 100%"
		>
			<slot name="{{this._individualSlot}}"></slot>
		</div>
	{{/each}}
</div>
