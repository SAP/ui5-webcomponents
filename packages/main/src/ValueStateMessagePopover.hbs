{{#if hasValueStateMessage}}
	<ui5-popover class="ui5-input-valuestatemessage-popover" placement-type="Bottom" no-arrow style="min-height: 1rem; box-shadow: none">
		<div slot="header" class="ui5-responsive-popover-header {{classes.popoverValueState}}">
			{{#if shouldDisplayDefaultValueStateMessage}}
				{{valueStateText}}
			{{else}}
				{{#each valueStateMessageText}}
					{{this}}
				{{/each}}
			{{/if}}
		</div>
	</ui5-popover>
{{/if}}
