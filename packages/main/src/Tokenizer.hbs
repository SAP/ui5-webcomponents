<div class="ui5-tokenizer-root">
	<div
		class="ui5-tokenizer--content"
		@ui5-delete="{{_delete}}"
		@click="{{_click}}"
		@mousedown="{{_onmousedown}}"
		@keydown="{{_onkeydown}}"
		@focusout="{{_onfocusout}}"
		@focusin="{{_onfocusin}}"
		@ui5-select="{{onTokenSelect}}"
		role="listbox"
		aria-label="{{tokenizerLabel}}"
		aria-description="{{tokenizerAriaDescription}}"
		aria-disabled="{{_ariaDisabled}}"
		aria-readonly="{{_ariaReadonly}}"
	>
		{{#each tokens}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	</div>

	{{#if showNMore}}
		<span
			role="button"
			aria-haspopup="dialog"
			@click="{{_handleNMoreClick}}"
			class="ui5-tokenizer-more-text"
			part="n-more-text"
		>{{_nMoreText}}</span>
	{{/if}}
</div>

{{>include "./TokenizerPopover.hbs"}}