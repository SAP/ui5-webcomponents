{{>include "./ListItem.hbs"}}

{{#*inline "listItemContent"}}
    <div @click="{{_openSubMenu}}">

        {{text}} <ui5-icon name="{{icon}}"></ui5-icon>

        {{#if _hasContent}}
            <div class="cnt">
                <slot name="content"></slot>
            </div>
        {{/if}}

        {{#if _showSubMenu}}
            <ui5-test-menu open .opener="{{_opener}}">
                <slot></slot>
            </ui5-test-menu>
        {{/if}}
    </div>
{{/inline}}