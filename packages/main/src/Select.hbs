<div
	class="ui5-select-root"
	tabindex="{{tabIndex}}"
	dir="{{dir}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
>
	<div
		class="ui5-select-label-root"
		@click="{{_togglePopover}}">
		<ui5-label>{{_text}}</ui5-label>
	</div>

	<ui5-icon 
		@click="{{_togglePopover}}"
		name="slim-arrow-down"
		input-icon
		?pressed="{{_iconPressed}}"
		dir="{{dir}}"
	></ui5-icon>

	<slot name="formSupport"></slot>
</div>
