<div {{> controlData}}
	class="{{classes.main}}"
	style="{{styles.main}}"
	tabindex="{{tabIndex}}">
	<div
		class="sapWCSelectLabel"
		@click="{{ctr._fnClickSelectBox}}">
		<ui5-label>{{ctr._text}}</ui5-label>
	</div>

	{{#if ctr.items}}
		<ui5-popover
			placement-type="Bottom"
			hide-header="true"
			hide-arrow="true"
			horizontal-align="Stretch">
				<ui5-list separators="None">
					<slot></slot>
				</ui5-list>
		</ui5-popover>
	{{/if}}

	<ui5-icon
		src="sap-icon://slim-arrow-down"
		class="sapWCSelectDropDownIcon"
		@ui5-press="{{ctr._fnClickSelectBox}}"
	></ui5-icon>
</div>
