<div
	class="{{classes.main}}"
	tabindex="{{tabIndex}}"
	dir="{{rtl}}"
>
	<div
		class="sapWCSelectLabel"
		@click="{{toggleList}}">
		<ui5-label>{{_text}}</ui5-label>
	</div>

	{{#if items}}
		<ui5-popover
			placement-type="Bottom"
			no-header="true"
			hide-arrow="true"
			horizontal-align="Stretch">
				<ui5-list separators="None">
					<slot></slot>
				</ui5-list>
		</ui5-popover>
	{{/if}}

	<ui5-icon
		src="sap-icon://slim-arrow-down"
		class="sapWCSelectDropDownIcon"
		@ui5-press="{{toggleList}}"
	></ui5-icon>
</div>
