<div
	class="ui5-select-root"
	tabindex="{{tabIndex}}"
	dir="{{dir}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
>
	<div
		class="ui5-select-label-root"
		@click="{{_toggleRespPopover}}">
		<ui5-label>{{_text}}</ui5-label>
	</div>

	{{#if options}}
		<ui5-responsive-popover
			id="ui5-select-respPopover"
			show-header-title
			@ui5-afterOpen="{{_applyFocusAfterOpen}}"
			@ui5-beforeOpen="{{_beforeOpen}}"
			@ui5-afterClose="{{_afterClose}}"
		>
			<ui5-list mode="SingleSelect" separators="None" @keydown="{{_handlePickerKeydown}}" @ui5-itemPress="{{_selectionChange}}">
				{{#each _syncedOptions}}
					<ui5-li ?selected="{{this.selected}}" icon="{{this.icon}}" id="{{this.id}}-li">
						{{this.textContent}}
					</ui5-li>
				{{/each}}
			</ui5-list>
		</ui5-responsive-popover>
	{{/if}}

		<ui5-icon 
			@click="{{_toggleRespPopover}}"
			name="slim-arrow-down"
			input-icon
			?pressed="{{_iconPressed}}"
			dir="{{dir}}"
		></ui5-icon>

	<slot name="formSupport"></slot>
</div>
