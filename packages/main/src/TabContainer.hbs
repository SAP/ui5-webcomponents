<div
	class="{{classes.root}}"
	dir="{{effectiveDir}}"
>
	{{#if tabsAtTheBottom}}
		{{> contentArea}}
	{{/if}}

	<div class="{{classes.header}}" id="{{_id}}-header">
		<div
				class="ui5-tc__overflowButton ui5-tc__startOverflowButton"
				@click="{{_onStartOverflowButtonClick}}"
				hidden
		>
			{{#if overflowButton.length}}
				<slot name="overflowButton"></slot>
			{{else}}
				<ui5-button
						icon="{{overflowMenuIcon}}"
						data-ui5-stable="tabs-overflow"
						tabindex="-1"
						title="{{overflowMenuTitle}}"
						aria-haspopup="true"
						icon-end>MORE</ui5-button>
			{{/if}}
		</div>
		<div class="{{classes.headerInnerContainer}}">
			<!-- tab items -->
			<div class="{{classes.headerScrollContainer}}" id="{{_id}}-headerScrollContainer">
				<ul
					role="tablist"
					@focusin={{_onTablistFocusin}}
					class="{{classes.headerList}}"
					@click="{{_onHeaderClick}}"
					@keydown="{{_onHeaderKeyDown}}"
					@keyup="{{_onHeaderKeyUp}}"
				>
					{{#each items}}
						{{#unless this.isSeparator}}
							{{this.stripPresentation}}
						{{/unless}}
						{{#if this.isSeparator}}
							<li
								id="{{this._id}}"
								data-ui5-stable="{{this.stableDomRef}}"
								role="separator"
								class="{{../classes.separator}}"
							></li>
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
		<div
			class="ui5-tc__overflowButton ui5-tc__endOverflowButton"
			@click="{{_onEndOverflowButtonClick}}"
			hidden
		>
			{{#if overflowButton.length}}
				<slot name="overflowButton"></slot>
			{{else}}
				<ui5-button
					icon="{{overflowMenuIcon}}"
					data-ui5-stable="tabs-overflow"
					tabindex="-1"
					title="{{overflowMenuTitle}}"
					aria-haspopup="true"
					icon-end>MORE</ui5-button>
			{{/if}}
		</div>
	</div>

	{{#unless tabsAtTheBottom}}
		{{> contentArea}}
	{{/unless}}

</div>

{{#*inline "contentArea"}}
	<div class="{{classes.content}}">
		{{#each items}}
			{{#unless this.isSeparator}}
				<div
					class="ui5-tc__contentItem"
					id="ui5-tc-contentItem-{{this._posinset}}"
					?hidden="{{this.effectiveHidden}}"
					role="tabpanel"
					aria-labelledby="{{this._id}}"
				>
					<slot name="{{this._individualSlot}}"></slot>
				</div>
			{{/unless}}
		{{/each}}
	</div>
{{/inline}}
