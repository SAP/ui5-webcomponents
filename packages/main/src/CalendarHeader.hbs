<div class="ui5-calheader-root">
	<div
		data-ui5-cal-header-btn-prev
		class="{{classes.prevButton}}"
		role="button"
		@mousedown={{onPrevButtonClick}}
		title="{{headerPreviousButtonText}}"
	>
		<ui5-icon class="ui5-calheader-arrowicon" name="slim-arrow-left"></ui5-icon>
	</div>

	<div class="ui5-calheader-midcontainer">
		<div
			data-ui5-cal-header-btn-month
			class="ui5-calheader-arrowbtn ui5-calheader-middlebtn"
			?hidden="{{_isHeaderMonthButtonHidden}}"
			tabindex="0"
			role="button"
			aria-label="{{accInfo.ariaLabelMonthButton}}"
			@click={{onHeaderShowMonthPress}}
			@keydown={{onMonthButtonKeyDown}}
			@keyup={{onMonthButtonKeyUp}}
		>
			<span>{{_headerMonthButtonText}}</span>
			{{#if hasSecondaryCalendarType}}
				<span class="ui5-calheader-btn-sectext">{{secondMonthButtonText}}</span>
			{{/if}}
		</div>
		<div
			data-ui5-cal-header-btn-year
			class="ui5-calheader-arrowbtn ui5-calheader-middlebtn"
			?hidden="{{_isHeaderYearButtonHidden}}"
			tabindex="0"
			role="button"
			@click={{onHeaderShowYearPress}}
			@keydown={{onYearButtonKeyDown}}
			@keyup={{onYearButtonKeyUp}}
		>
			<span>{{_headerYearButtonText}}</span>
			{{#if hasSecondaryCalendarType}}
				<span class="ui5-calheader-btn-sectext">{{_headerYearButtonTextSecType}}</span>
			{{/if}}
		</div>
	</div>

	<div
		data-ui5-cal-header-btn-next
		class="{{classes.nextButton}}"
		role="button"
		@mousedown={{onNextButtonClick}}
		title={{headerNextButtonText}}
	>
		<ui5-icon class="ui5-calheader-arrowicon" name="slim-arrow-right"></ui5-icon>
	</div>
</div>
