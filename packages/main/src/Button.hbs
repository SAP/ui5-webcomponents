<button
		type="button"
		class="{{classes.main}}"
		?disabled="{{disabled}}"
		?aria-disabled="{{ariaDisabled}}"
		tabindex="{{_customAttributes.tabindex}}"
		data-sap-focus-ref
		{{> ariaPressed}}
	>
		{{#if _iconSettings}}
			<ui5-icon
				class="{{classes.icon}}"
				src="{{_iconSettings.src}}"
			></ui5-icon>
		{{/if}}

		{{#if textContent}}
			<span id="{{_id}}-content" class="{{classes.text}}">
				<bdi>
					<slot></slot>
				</bdi>
			</span>
		{{/if}}
</button>

{{#*inline "ariaPressed"}}{{/inline}}
