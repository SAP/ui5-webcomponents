<button
		type="button"
		class="{{classes.main}}"
		?disabled="{{disabled}}"
		data-sap-focus-ref
		{{> ariaPressed}}
		dir="{{rtl}}"
		@focusout={{_onfocusout}}
		@click={{_onclick}}
		@mousedown={{_onmousedown}}
	>
		{{#if icon}}
			<ui5-icon
				class="{{classes.icon}}"
				src="{{icon}}"
			></ui5-icon>
		{{/if}}

		{{#if textContent}}
			<span id="{{_id}}-content" class="{{classes.text}}">
				<bdi>
					<slot></slot>
				</bdi>
			</span>
		{{/if}}

		{{#if hasButtonType}}
			<span class="ui5-hidden-text">{{buttonTypeText}}</span>
		{{/if}}
</button>

{{#*inline "ariaPressed"}}{{/inline}}
