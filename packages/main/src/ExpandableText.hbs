<div>
	<ui5-text
		class="ui5-exp-text-text"
		empty-indicator-mode="{{emptyIndicatorMode}}"
	>
		{{_displayedText}}
	</ui5-text>

	{{#if _maxCharactersExceeded}}
		<span class="ui5-exp-text-ellipsis">{{_ellipsisText}}</span>
		<ui5-link
			id="toggle"
			class="ui5-exp-text-toggle"
			accessible-role="Button"
			?accessible-name="{{_accessibleNameForToggle}}"
			.accessibilityAttributes="{{_accessibilityAttributesForToggle}}"
			@click="{{_handleToggleClick}}"
			@mousedown="{{_handleToggleMousedown}}"
		>
			{{_textForToggle}}
		</ui5-link>

		{{#if _usePopover}}
			<ui5-responsive-popover
				?open="{{_expanded}}"
				opener="toggle"
				accessible-name-ref="popover-text"
				content-only-on-desktop
				_hide-header
				class="ui5-exp-text-popover"
				@ui5-close="{{_handlePopoverClose}}"
			>
				<ui5-text id="popover-text">{{text}}</ui5-text>
				<div 
					slot="footer"
					class="ui5-exp-text-footer"
				>
					<ui5-button
						design="Transparent"
						@click="{{_handleCloseButtonClick}}"
					>
						{{_closeButtonText}}
					</ui5-button>
				</div>
			</ui5-responsive-popover>
		{{/if}}
	{{/if}}
</div>