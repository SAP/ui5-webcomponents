<div 
	id="{{this._id}}"
	?disabled= "{{disabled}}"
	value = "{{value}}"
	label = "{{label}}"
	?expanded= "{{_expanded}}"
	@click = {{_onclick}}
	@keydown={{_onkeydown}}
	class = "ui5-slider"
	data-sap-focus-ref
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	tabindex="0"
>
	<div class="ui5-slider-header-block">
		<div id="{{this._id}}--label" class="ui5-slider-label"> {{label}}</div>
		<div class="ui5-slider-invisible-text"></div>
		<ui5-button class="ui5-slider-arrow" icon="arrow-top" @click={{_onArrowUp}} tabindex="-1"></ui5-button>
	</div>
	<div id="{{this._id}}--inner" class="ui5-slider-inner">
	<div id="{{this._id}}--selection-frame" class="ui5-slider-selection-frame">
		</div>
		<div id="{{this._id}}--wrapper" class="ui5-slider-wrapper">
			{{#if _expanded}}
				<ul id="{{this._id}}--items-list">
					{{#each items}}
						<li class="ui5-slider-item">{{this}}</li>
					{{/each}}
				</ul>
			{{else}}
				<ul id="{{this._id}}--items-list">
					<li class="ui5-slider-item">{{value}}</li>
				</ul>
			{{/if}}
		</div>
	</div>
	<ui5-button class="ui5-slider-arrow" icon="arrow-bottom" @click={{_onArrowDown}} tabindex="-1"></ui5-button>
</div>