<div
	class="ui5-slider-root"
	@mousedown="{{_handleDown}}"
	@keyup="{{_onkeyup}}"
	@click={{_click}}
>
	<div class="ui5-slider-inner">
		<div class="ui5-slider-progress-container">
			<div class="ui5-slider-progress"></div>
		</div>

		{{#if step}}
			{{#if tickmarks}}
				<div class="ui5-slider-tickmarks"></div>
				{{#if labelDistance}}
					<ul class="ui5-slider-labels"></ul>
				{{/if}}
			{{/if}}
		{{/if}}

		<div class="ui5-slider-handle">
			{{#if showTooltip}}
				<div class="ui5-slider-tooltip">
					<span class="ui5-slider-tooltip-value">{{value}}</span>
				</div>
			{{/if}}
		</div>
		{{#if endValue}}
			<div class="ui5-slider-end-handle">
				{{#if showTooltip}}
					<div class="ui5-slider-end-tooltip">
						<span class="ui5-slider-end-tooltip-value">{{endValue}}</span>
					</div>
				{{/if}}
			</div>
		{{/if}}

	</div>

</div>