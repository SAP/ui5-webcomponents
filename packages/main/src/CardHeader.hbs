<div
	id="{{_id}}--header"
	class="{{classes.root}}"
	role="group"
	aria-roledescription="{{ariaRoleDescription}}"
	@click="{{_click}}"
	@keydown="{{_keydown}}"
	@keyup="{{_keyup}}"
	part="root"
>
	<div
		class="ui5-card-header-focusable-element"
		aria-labelledby="{{ariaLabelledBy}}"
		role="{{ariaRoleFocusableElement}}"
		data-sap-focus-ref
		tabindex="0"
	>
		{{#if hasAvatar}}
			<div id="{{_id}}-avatar" class="ui5-card-header-avatar" aria-label="{{ariaCardAvatarLabel}}">
				<slot name="avatar"></slot>
			</div>
		{{/if}}

		<div class="ui5-card-header-text">
			<div class="ui5-card-header-first-line">
				{{#if titleText}}
					<div
						id="{{_id}}-title"
						class="ui5-card-header-title"
						part="title"
						role="heading"
						aria-level="3"
					>{{titleText}}</div>
				{{/if}}

				{{#if additionalText}}
					<div class="ui5-card-header-additionalText">
						<span id="{{_id}}-additionalText" part="additional-text" dir="auto">{{additionalText}}</span>
					</div>
				{{/if}}

			</div>

			{{#if subtitleText}}
				<div id="{{_id}}-subtitle" class="ui5-card-header-subtitle" part="subtitle">{{subtitleText}}</div>
			{{/if}}
		</div>
	</div>

	{{#if hasAction}}
		<div
			class="ui5-card-header-action"
			@focusin="{{_actionsFocusin}}"
			@focusout="{{_actionsFocusout}}"
		>
			<slot name="action"></slot>
		</div>
	{{/if}}

	</div>
</div>
