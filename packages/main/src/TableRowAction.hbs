{{#if _getMenuItem}}
    <ui5-menu-item
        text="{{text}}"
        icon="{{icon}}"
        @click="{{_onTableRowActionClick}}">
    </ui5-menu-item>
{{else}}
    <ui5-button
        icon="{{icon}}"
        text="{{text}}"
        design="Transparent"
        @click={{_onTableRowActionClick}}>
    </ui5-button>
{{/if}}