<div
	tabindex="{{_tabIndex}}"
	@click="{{_select}}"
	@keydown="{{_keydown}}"
	class="ui5-token--wrapper"
	dir="{{dir}}"
	role="option"
	aria-selected="{{selected}}"
>
	<span class="ui5-token--text"><slot></slot></span>

	{{#unless readonly}}
		<ui5-icon
			@click="{{_delete}}"
			name="{{iconURI}}"
			accessible-name="{{tokenDeletableText}}"
			show-tooltip
			class="ui5-token--icon"
		></ui5-icon>
	{{/unless}}
</div>
