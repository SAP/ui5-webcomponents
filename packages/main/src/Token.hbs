<div tabindex="{{ctr._tabIndex}}" @click="{{ctr._select}}" @keydown="{{ctr._keydown}}" class="ui5-token--wrapper">
	<span class="ui5-token--text"><slot></slot></span>

	{{#unless ctr.readonly}}
		<ui5-icon @click="{{ctr._delete}}" src="{{iconURI}}" class="ui5-token--icon"></ui5-icon>
	{{/unless}}
</div>