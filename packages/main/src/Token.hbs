<div
	tabindex="{{forcedTabIndex}}"
	@click="{{_handleSelect}}"
	@focusin="{{_focusin}}"
	@focusout="{{_focusout}}"
	@keydown="{{_keydown}}"
	class="ui5-token--wrapper"
	role="option"
	aria-selected="{{selected}}"
>
	<span class="ui5-token--text">{{this.text}}</span>

	{{#unless readonly}}
		<div
			class="ui5-token--icon"
		>
			{{#if closeIcon.length}}
				<slot name="closeIcon" @click="{{_delete}}"></slot>
			{{else}}
				<ui5-icon
					name="{{iconURI}}"
					accessible-name="{{tokenDeletableText}}"
					show-tooltip
					@click="{{_delete}}"
				></ui5-icon>
			{{/if}}
		</div>
	{{/unless}}
</div>
