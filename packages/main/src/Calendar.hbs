<div
	class="ui5-cal-root"
	@keydown={{_onkeydown}}
>
	<div id="{{_id}}-content" class="ui5-cal-content">
		<ui5-daypicker
			id="{{_id}}-daypicker"
			?hidden="{{_isDayPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			._hidden="{{_isDayPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{secondaryCalendarType}}"
			.selectionMode="{{selectionMode}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			?hide-week-numbers="{{hideWeekNumbers}}"
			@ui5-change="{{onSelectedDatesChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-daypicker>

		<ui5-monthpicker
			id="{{_id}}-MP"
			?hidden="{{_isMonthPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			._hidden="{{_isMonthPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{secondaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedMonthChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-monthpicker>

		<ui5-yearpicker
			id="{{_id}}-YP"
			?hidden="{{_isYearPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			._hidden="{{_isYearPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{secondaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedYearChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-yearpicker>
	</div>

	{{! Positioned above the content due to flex-direction:column-reverse, but physically here for tab order to work}}
	<ui5-calendar-header
			id="{{_id}}-head"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{secondaryCalendarType}}"
			.buttonTextForSecondaryCalendarType="{{secondaryCalendarTypeButtonText}}"
			timestamp="{{_timestamp}}"
			.isPrevButtonDisabled="{{_previousButtonDisabled}}"
			.isNextButtonDisabled="{{_nextButtonDisabled}}"
			.isMonthButtonHidden="{{_isHeaderMonthButtonHidden}}"
			._monthButtonText="{{_headerMonthButtonText}}"
			._yearButtonText="{{_headerYearButtonText}}"
			._yearButtonTextSecType="{{_headerYearButtonTextSecType}}"
			@ui5-previous-press="{{onHeaderPreviousPress}}"
			@ui5-next-press="{{onHeaderNextPress}}"
			@ui5-show-month-press="{{onHeaderShowMonthPress}}"
			@ui5-show-year-press="{{onHeaderShowYearPress}}"
	></ui5-calendar-header>
</div>
