<div
	class="ui5-cal-root"
	@keydown={{_onkeydown}}
>
	<div id="{{_id}}-content" class="ui5-cal-content">
		<ui5-daypicker
			id="{{_id}}-daypicker"
			?hidden="{{_isDayPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			.specialCalendarDates="{{_specialCalendarDates}}"
			._hidden="{{_isDayPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{_secondaryCalendarType}}"
			.selectionMode="{{selectionMode}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			?hide-week-numbers="{{hideWeekNumbers}}"
			@ui5-change="{{onSelectedDatesChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-daypicker>

		<ui5-monthpicker
			id="{{_id}}-MP"
			?hidden="{{_isMonthPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			._hidden="{{_isMonthPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{_secondaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedMonthChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-monthpicker>

		<ui5-yearpicker
			id="{{_id}}-YP"
			?hidden="{{_isYearPickerHidden}}"
			format-pattern="{{_formatPattern}}"
			.selectedDates="{{_selectedDatesTimestamps}}"
			._hidden="{{_isYearPickerHidden}}"
			.primaryCalendarType="{{_primaryCalendarType}}"
			.secondaryCalendarType="{{_secondaryCalendarType}}"
			.minDate="{{minDate}}"
			.maxDate="{{maxDate}}"
			timestamp="{{_timestamp}}"
			@ui5-change="{{onSelectedYearChange}}"
			@ui5-navigate="{{onNavigate}}"
		></ui5-yearpicker>
	</div>
	<div class="ui5-calheader">
		{{>include "./CalendarHeader.hbs"}}
	</div>
</div>

<div
	@ui5-_calendar-legend-selection-change={{_onCalendarLegendSelectionChange}}
	@ui5-_calendar-legend-focus-out={{_onLegendFocusOut}}
>
	<slot name="calendarLegend"></slot>
</div>