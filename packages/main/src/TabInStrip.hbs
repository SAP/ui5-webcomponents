<div id="{{this._id}}"
	class="{{this.stripClasses}}"
	tabindex="{{this._tabIndex}}"
	role="tab"
	aria-posinset="{{this._posinset}}"
	aria-setsize="{{this._setsize}}"
	aria-controls="ui5-tc-content"
	aria-selected="{{this.effectiveSelected}}"
	aria-disabled="{{this.effectiveDisabled}}"
	?disabled="{{this.effectiveDisabled}}"
	aria-labelledby="{{this.ariaLabelledBy}}"
	data-ui5-stable="{{this.stableDomRef}}"
	._realTab="{{this}}"
>
	{{#if this.icon}}
		<div class="ui5-tab-strip-item-icon-outer">
			<ui5-icon name="{{this.icon}}" class="ui5-tab-strip-item-icon"></ui5-icon>
		</div>
	{{/if}}

	<div class="ui5-tab-strip-itemContent">
		{{#unless this._isInline}}
			{{> additionalText}}
		{{/unless}}

		{{#if this.text}}
			<span class="ui5-tab-strip-itemText" id="{{this._id}}-text">
				{{#if this.semanticIconName}}
					<ui5-icon class="{{semanticIconClasses}}" name="{{semanticIconName}}"></ui5-icon>
				{{/if}}

				{{this.displayText}}
			{{#if this.isSingleClickArea}}
			<span class="ui5-tab-single-click-icon">
				<ui5-icon name="slim-arrow-down"></ui5-icon>
			</span>
			{{/if}}
			</span>
		{{/if}}
	</div>

	{{#if this.requiresExpandButton}}
		<div class="ui5-tab-expand-button" @click="{{_onTabExpandButtonClick}}">
			<ui5-button
				.tab={{this}}
				icon="slim-arrow-down"
				design="Transparent"
				tabindex="-1"
				?disabled="{{disabled}}"
				aria-haspopup="true">
			</ui5-button>
		</div>
	{{/if}}

{{#*inline additionalText}}
	{{#if this.additionalText}}
		<span class="ui5-tab-strip-itemAdditionalText" id="{{this._id}}-additionalText">{{this.additionalText}}</span>
	{{/if}}
{{/inline}}
