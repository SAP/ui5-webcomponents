{{>include "./ListItem.hbs"}}

{{#*inline "listItemContent"}}
	<div class="ui5-li-text-wrapper">
		<span part="title" class="ui5-li-title"><slot></slot></span>
		{{#if description}}
			<div class="ui5-li-description-info-wrapper">
				<span part="description" class="ui5-li-desc">{{description}}</span>

				{{#if additionalText}}
					<span part="additional-text" class="ui5-li-additional-text">{{additionalText}}</span>
				{{/if}}
			</div>
		{{/if}}
		{{#unless typeActive}}
			<span class="ui5-hidden-text">{{type}}</span>
		{{/unless}}
	</div>
	{{#unless description}}
		{{#if additionalText}}
			<span part="additional-text" class="ui5-li-additional-text">{{additionalText}}</span>
		{{/if}}
	{{/unless}}
{{/inline}}

{{#*inline "imageBegin"}}
	{{#if displayImage}}
		<ui5-avatar shape="Square" class="ui5-li-img">
			<img src="{{image}}" class="ui5-li-img-inner" />
		</ui5-avatar>
	{{/if}}
{{/inline}}

{{#*inline "iconBegin"}}
	{{#if displayIconBegin}}
		<ui5-icon part="icon" name="{{icon}}" class="ui5-li-icon" accessible-role="presentation" aria-hidden="true"></ui5-icon>
	{{/if}}
{{/inline}}

{{#*inline "iconEnd"}}
	{{#if displayIconEnd}}
		<ui5-icon part="icon" name="{{icon}}" class="ui5-li-icon" accessible-role="presentation" aria-hidden="true"></ui5-icon>
	{{/if}}
{{/inline}}
