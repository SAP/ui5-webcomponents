{{>include "./ListItem.hbs"}}

{{#*inline "listItemContent"}}
	<div class="ui5-li-title-wrapper">
		{{#if textContent.length}}
			<span part="title" class="ui5-li-title"><slot></slot></span>
		{{/if}}
		{{#if description}}
			<span part="description" class="ui5-li-desc">{{description}}</span>
		{{/if}}
		{{#unless typeActive}}
			<span class="ui5-hidden-text">{{type}}</span>
		{{/unless}}
	</div>
	{{#if info}}
		<span part="info" class="ui5-li-info">{{info}}</span>
	{{/if}}
{{/inline}}

{{#*inline "imageBegin"}}
	{{#if displayImage}}
		<ui5-avatar image="{{image}}" image-fit-type="Contain" shape="Square" class="ui5-li-img"></ui5-avatar>
	{{/if}}
{{/inline}}

{{#*inline "iconBegin"}}
	{{#if displayIconBegin}}
		<ui5-icon part="icon" name="{{icon}}" class="ui5-li-icon"></ui5-icon>
	{{/if}}
{{/inline}}

{{#*inline "iconEnd"}}
	{{#if displayIconEnd}}
		<ui5-icon part="icon" name="{{icon}}" class="ui5-li-icon"></ui5-icon>
	{{/if}}
{{/inline}}
