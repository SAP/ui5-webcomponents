<div
	class="{{classes.main}}"
	style="width: 100%;"
	@focusin="{{onfocusin}}"
	@focusout="{{onfocusout}}"
>
<div id="{{_id}}-wrapper"
	class="{{classes.wrapper}}"
>
	{{#if _beginContent.length}}
		<slot name="_beginContent"></slot>
	{{/if}}

	<input id="{{_id}}-inner"
			class="sapWCInputBaseInner"
			type="{{inputType}}"
			?disabled="{{disabled}}"
			?readonly="{{_readonly}}"
			?required="{{required}}"
			.value="{{value}}"
			placeholder="{{inputPlaceholder}}"
			aria-invalid="{{ariaInvalid}}"
			aria-haspopup="{{ariaHasPopup}}"
			aria-describedby="{{ariaDescribedBy}}"
			aria-autocomplete="{{ariaAutoComplete}}"
			@input="{{_handleInput}}"
			@change="{{_handleChange}}"
			data-sap-no-tab-ref
			data-sap-focus-ref
	/>
		{{#if icon.length}}
			<div class="sapWCInputIconRoot">
				<slot name="icon"></slot>
			</div>
		{{/if}}

		{{#if showSuggestions}}
			<span id="{{_id}}-suggestionsText" class="ui5-hidden-text">{{suggestionsText}}</span>
		{{/if}}

		{{#if hasValueState}}
			<span id="{{_id}}-descr" class="ui5-hidden-text">{{valueStateText}}</span>
		{{/if}}
	</div>

	{{#if showSuggestions}}
			<ui5-popover
				placement-type="Bottom"
				no-arrow
				horizontal-align="Stretch"
				initial-focus="{{_id}}-inner">
					<ui5-list separators="Inner">
                        <slot></slot>
					</ui5-list>
			</ui5-popover>
	{{/if}}

	<slot name="formSupport"></slot>
</div>
