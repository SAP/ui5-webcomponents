<div {{> controlData}}
	class="{{classes.main}}"
	style="{{styles.main}}"
	aria-invalid="{{ariaInvalid}}"
	aria-labelledBy="{{ariaLabelledBy}}"
>
<div id="{{ctr._id}}-wrapper"
	class="{{classes.wrapper}}"
>
	<input id="{{ctr._id}}-inner"
			class="sapWCInputBaseInner"
			type="{{type}}"
			?disabled="{{ctr.disabled}}"
			?readonly="{{_readonly}}"
			.value="{{ctr.value}}"
			placeholder="{{ctr.placeholder}}"
			data-sap-no-tab-ref
			data-sap-focus-ref
	/>
		{{#if ctr.icon}}
			<slot name="{{ctr.icon._slot}}"></slot>
		{{/if}}
	</div>

	{{#if ctr.showSuggestions}}
			<ui5-popover
				placement-type="Bottom"
				hide-header="true"
				hide-arrow="true"
				horizontal-align="Stretch"
				initial-focus="{{ctr._id}}-inner">
					<ui5-list>
						{{#each ctr.suggestionItems}}
							<slot name="{{this._slot}}"></slot>
						{{/each}}
					</ui5-list>
			</ui5-popover>
	{{/if}}
</div>