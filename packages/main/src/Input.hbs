<div
	class="{{classes.main}}"
	style="width: 100%;"
	?aria-invalid="{{ariaInvalid}}"
	@focusin="{{onfocusin}}"
	@focusout="{{onfocusout}}"
>
<div id="{{_id}}-wrapper"
	class="{{classes.wrapper}}"
>
	{{#if _beginContent}}
		<slot name="_beginContent"></slot>
	{{/if}}

	<input id="{{_id}}-inner"
			class="sapWCInputBaseInner"
			type="{{inputType}}"
			?disabled="{{disabled}}"
			?readonly="{{_readonly}}"
			.value="{{value}}"
			placeholder="{{inputPlaceholder}}"
			@input="{{_handleInput}}"
			@change="{{_handleChange}}"
			data-sap-no-tab-ref
			data-sap-focus-ref
	/>
		{{#if icon}}
			<slot name="icon"></slot>
		{{/if}}
	</div>

	{{#if showSuggestions}}
			<ui5-popover
				placement-type="Bottom"
				no-header
				no-arrow
				horizontal-align="Stretch"
				initial-focus="{{_id}}-inner">
					<ui5-list separators="Inner">
                        <slot></slot>
					</ui5-list>
			</ui5-popover>
	{{/if}}

	<slot name="formSupport"></slot>
</div>
