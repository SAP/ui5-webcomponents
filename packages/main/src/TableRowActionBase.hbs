{{#if invisible}}
    <div></div>
{{else if _isInteractive}}
    <ui5-button
        icon="{{_icon}}"
        text="{{_text}}"
        tooltip="{{_text}}"
        @click={{_onActionClick}}
        design="Transparent">
    </ui5-button>
{{else}}
    <ui5-icon
        name="{{_icon}}"
        tooltip="{{_text}}"
        design="Transparent">
    </ui5-icon>
{{/if}}