<li
	tabindex="{{_tabIndex}}"
	class="{{classes.main}}"
	dir="{{rtl}}"
	@focusin="{{onfocusin}}"
	@focusout="{{onfocusout}}"
>
		{{#if placeSelectionElementBefore}}
			{{> selectionElement}}
		{{/if}}

		<div id="{{_id}}-content" class="{{classes.inner}}">
			{{> imageBegin}}
			{{> iconBegin}}
			{{> listItemContent}}
		</div>

		{{> iconEnd}}

		{{#if placeSelectionElementAfter}}
			{{> selectionElement}}
		{{/if}}
</li>


{{#*inline "listItemContent"}}{{/inline}}
{{#*inline "imageBegin"}}{{/inline}}
{{#*inline "iconBegin"}}{{/inline}}
{{#*inline "iconEnd"}}{{/inline}}

{{#*inline "selectionElement"}}
	{{#if modeSingleSelect}}
		<ui5-radiobutton
				id="{{_id}}-singleSelectionElement"
				class="singleSelectionRadioButton"
				?selected="{{selected}}">
		</ui5-radiobutton>
	{{/if}}

	{{#if modeMultiSelect}}
		<ui5-checkbox
				id="{{_id}}-multiSelectionElement"
				class="multiSelectionCheckBox"
				?checked="{{selected}}">
		</ui5-checkbox>
	{{/if}}

	{{#if modeDelete}}
		<div class="sapMDeleteListItemButton">
			<ui5-button
				id="{{_id}}-deleteSelectionElement"
				design="Transparent"
				icon="sap-icon://decline"
				@ui5-press="{{_onDelete}}"
			></ui5-button>
		</div>
	{{/if}}
{{/inline}}
