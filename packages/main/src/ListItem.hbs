<li
	tabindex="{{_tabIndex}}"
	class="{{classes.main}}">
		{{#if placeSelectionControlBefore}}
			{{> modeControl}}
		{{/if}}

		<div id="{{_id}}-content" class="{{classes.inner}}">
			{{> imageBegin}}
			{{> iconBegin}}
			{{> listItemContent}}
		</div>

		{{> iconEnd}}

		{{#if placeSelectionControlAfter}}
			{{> modeControl}}
		{{/if}}
</li>


{{#*inline "listItemContent"}}{{/inline}}
{{#*inline "imageBegin"}}{{/inline}}
{{#*inline "iconBegin"}}{{/inline}}
{{#*inline "iconEnd"}}{{/inline}}

{{#*inline "modeControl"}}
	{{#if modeSingleSelect}}
		<ui5-radiobutton
				id="{{_id}}-singleSelectionControl"
				class="singleSelectionRadioButton"
				?selected="{{selected}}">
		</ui5-radiobutton>
	{{/if}}

	{{#if modeMultiSelect}}
		<ui5-checkbox
				id="{{_id}}-multiSelectionControl"
				class="multiSelectionCheckBox"
				?checked="{{selected}}">
		</ui5-checkbox>
	{{/if}}

	{{#if modeDelete}}
		<div class="sapMDeleteListItemButton">
			<ui5-button
				id="{{_id}}-deleteSelectionControl"
				type="Transparent"
				icon="sap-icon://decline"
				@ui5-press="{{_fnOnDelete}}"
			></ui5-button>
		</div>
	{{/if}}
{{/inline}}
