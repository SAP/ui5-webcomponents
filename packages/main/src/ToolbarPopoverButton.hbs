<ui5-button
	icon="{{this.icon}}"
	design="{{this.design}}"
	?disabled="{{this.disabled}}"
	?hidden="{{this.hidden}}"
	?priority="{{this.priority}}"
	@click="{{this.click}}"
	prevent-overflow-closing="{{this.preventOverflowClosing}}"
	class="ui5-tb-popover-button ui5-tb-popover-item {{this.classList.value}}"
	data-ui5-external-action-item-id="{{this._id}}"
>
	{{this.text}}
</ui5-button>