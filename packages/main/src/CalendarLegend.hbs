<div class="ui5-calendar-legend-root"
		@focusout="{{_onFocusOut}}"
		@focusin="{{_onFocusIn}}"
		@keydown="{{_onItemKeyDown}}"
		@mousedown="{{_onMouseDown}}"
		role="list"
		aria-roledescription="{{_roleDescription}}"
	>
	{{#each defaultItemsMapping}}
		{{#unless this.hide}}
			<ui5-calendar-legend-item type={{this.type}}></ui5-calendar-legend-item>
		{{/unless}}
	{{/each}}

	{{#each legendItems}}
		<slot name="{{this._individualSlot}}"></slot>
	{{/each}}
</div>