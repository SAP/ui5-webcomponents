<div class="ui5-calendar-legend-root">
	{{#each defaultItemsMapping}}
		{{#unless this.hide}}
			<ui5-calendar-legend-item 
				type={{this.type}}
				@focusin="{{../_onFocusIn}}"
				@keydown="{{../_onItemKeyDown}}"
				@mousedown="{{../_onMouseDown}}"
			>
			</ui5-calendar-legend-item>
		{{/unless}}
	{{/each}}

	{{#each legendItems}}
		<ui5-calendar-legend-item 
			type={{this.type}}
			text={{this.text}}
			@focusin="{{../_onFocusIn}}"
			@keydown="{{../_onItemKeyDown}}"
			@mousedown="{{../_onMouseDown}}"
		>
		</ui5-calendar-legend-item>
	{{/each}}
</div>