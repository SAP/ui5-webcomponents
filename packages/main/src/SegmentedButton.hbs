<ul
	@click="{{_onclick}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@focusin="{{_onfocusin}}"
	class="ui5-segmented-button-root"
	role="listbox"
	dir="{{effectiveDir}}"
	aria-multiselectable="true"
	aria-describedby="{{_id}}-invisibleText"
	aria-roledescription={{ariaDescription}}
>
	<slot></slot>

	<span id="{{_id}}-invisibleText" class="ui5-hidden-text">{{ariaDescribedBy}}</span>

</ul>
