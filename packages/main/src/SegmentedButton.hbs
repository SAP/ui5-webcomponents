<ul
	@click="{{_onclick}}"
	@focusin="{{_onfocusin}}"
	class="ui5-segmentedbutton-root"
	role="listbox"
	dir="{{effectiveDir}}"
	aria-multiselectable="true"
	aria-describedby="{{ariaDescribedBy}}"
	aria-roledescription="{{_id}}-invisibleText"
>
	<slot></slot>

	<span id="{{_id}}-invisibleText" class="ui5-hidden-text">{{ariaDescription}}</span>

</ul>
