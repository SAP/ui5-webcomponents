<div class="ui5-avatar-root">
	{{#if image}}
		<span alt="avatar" class="ui5-avatar-img" style="background-image: url({{image}})"></span>
	{{else if icon}}
		<ui5-icon class="ui5-avatar-icon" name="{{icon}}"></ui5-icon>
	{{else if initials}}
		<span class="ui5-avatar-initials">{{validInitials}}</span>
	{{/if}}
</div>