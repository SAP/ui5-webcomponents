<div
	class="ui5-avatar-root"
	tabindex="{{tabindex}}"
	data-sap-focus-ref
	@keyup={{_onkeyup}}
	@keydown={{_onkeydown}}
	@focusout={{_onfocusout}}
	@focusin={{_onfocusin}}
	@click={{_onclick}}
	role="{{_role}}"
	aria-haspopup="{{_ariaHasPopup}}"
	aria-label="{{accessibleNameText}}"
	fallback-icon="{{_fallbackIcon}}"
>
	{{#if hasImage}}
		<slot></slot>
	{{else}}
		{{#if icon}}
			<ui5-icon class="ui5-avatar-icon" name="{{icon}}"></ui5-icon>
		{{/if}}

		{{#if initials}}
			<span class="ui5-avatar-initials">{{validInitials}}</span>
			<ui5-icon class="ui5-avatar-icon ui5-avatar-icon-fallback" name="{{fallbackIcon}}"></ui5-icon>
		{{/if}}

	{{/if}}

	<slot name="badge"></slot>
</div>
