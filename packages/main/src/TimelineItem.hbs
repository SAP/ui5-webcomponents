<div
	class="ui5-tli-root"
	dir="{{rtl}}"
>
	<div class="ui5-tli-indicator">
		{{#if icon}}
			<div class="ui5-tli-icon-outer">
				<ui5-icon class="ui5-tli-icon" src="{{icon}}"></ui5-icon>
			</div>
		{{/if}}
	</div>
	<div class="sapWCTimelineBubble" tabindex="{{_tabIndex}}" data-sap-focus-ref>
		<div class="sapWCTimelineItemTitle">
			{{#if itemName}}
				{{> itemName}}
			{{/if}}

			<span>{{titleText}}</span>
		</div>
		<div class="sapWCTimelineItemSubtitle">{{subtitleText}}</div>

		{{#if textContent}}
			<div class="sapWCTimelineItemDesc">
				<slot></slot>
			</div>
		{{/if}}
		<span class="sapWCTimelineBubbleArrow sapWCTimelineBubbleArrowLeft"></span>
	</div>
</div>

{{#*inline "itemName"}}
	{{#if itemNameClickable}}
		<ui5-link @click="{{onItemNamePress}}">{{itemName}}</ui5-link>
	{{/if}}

	{{#unless itemNameClickable}}
		<span>{{itemName}}</span>
	{{/unless}}
{{/inline}}
