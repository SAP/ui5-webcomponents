<div id="{{this._id}}" formatPattern="{{formatPattern}}" class="ui5-timepicker-root">
	<ui5-input
			id="{{_id}}-inner"
			value="{{value}}"
			?disabled="{{disabled}}"
			?readonly="{{readonly}}"
			value-state="{{valueState}}"
			@ui5-change="{{_handleInputChange}}"
			@ui5-input="{{_handleInputLiveChange}}"
	>
		<ui5-icon
			slot="icon"
			name="time-entry-request"
			tabindex="-1"
			show-tooltip
			@click="{{togglePicker}}"
			input-icon
			?pressed="{{_isPickerOpen}}"
			class="ui5-timepicker-input-icon-button"
		></ui5-icon>
	</ui5-input>
	<ui5-responsive-popover
			id="{{_id}}-responsive-popover"
			allow-target-overlap="{{_respPopover.allowTargetOverlap}}"
			placement-type="{{_respPopover.placementType}}"
			no-arrow
			horizontal-align="{{_respPopover.horizontalAlign}}"
			stay-open-on-scroll="{{_respPopover.stayOpenOnScroll}}"
			@ui5-afterClose="{{_respPopover.afterClose}}"
			@ui5-afterOpen="{{_respPopover.afterOpen}}"
			header-text="Pick Time"
			class="ui5-timepicker-popover"
	>
	<div class="ui5-timepicker-sliders-container" @keydown={{_oncontainerkeydown}} tabindex="0" @focusin="{{_onfocuscontainerin}}">
		{{#if shouldBuildHoursSlider}}
			<ui5-wheelslider 
				label = "{{hoursSliderTitle}}"
				._items="{{hoursArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-slider ui5-timepicker-hours-slider"
			></ui5-wheelslider>
		{{/if}}
		{{#if shouldBuildMinutesSlider}}
			<ui5-wheelslider 
				label = "{{minutesSliderTitle}}"
				._items="{{minutesArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-slider ui5-timepicker-minutes-slider"
			></ui5-wheelslider>
		{{/if}}
		{{#if shouldBuildSecondsSlider}}
			<ui5-wheelslider 
				label = "{{secondsSliderTitle}}"
				._items="{{secondsArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-slider ui5-timepicker-seconds-slider"
			></ui5-wheelslider>
		{{/if}}
		{{#if shouldBuildPeriodsSlider}}
			<ui5-wheelslider 
				label = "{{periodSliderTitle}}"
				value="AM"
				._items="{{periodsArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-slider ui5-timepicker-period-slider"
			></ui5-wheelslider>
		{{/if}}
	</div>
		<div slot="footer" class="ui5-timepicker-footer">
			<ui5-button id="submit" design="Emphasized" @click="{{submitPickers}}">Submit</ui5-button>
			<ui5-button id="close" design="Transparent" @click="{{closePicker}}">Close</ui5-button>
		</div>
	</ui5-responsive-popover>
</div>