<div id="{{this._id}}" formatPattern="{{formatPattern}}" class="sapMTimePicker">
	<ui5-input
			id="{{_id}}-inner"
			value="{{value}}"
			?disabled="{{disabled}}"
			?readonly="{{readonly}}"
			value-state="{{valueState}}"
			@ui5-change="{{_handleInputChange}}"
			@ui5-input="{{_handleInputLiveChange}}"
	>
		<ui5-icon
			slot="icon"
			name="time-entry-request"
			tabindex="-1"
			show-tooltip
			@click="{{togglePicker}}"
			input-icon
			?pressed="{{_isPickerOpen}}"
		></ui5-icon>
	</ui5-input>
	<ui5-popover
			id="{{_id}}-popover"
			allow-target-overlap="{{_popover.allowTargetOverlap}}"
			placement-type="{{_popover.placementType}}"
			no-arrow
			horizontal-align="{{_popover.horizontalAlign}}"
			stay-open-on-scroll="{{_popover.stayOpenOnScroll}}"
			@ui5-afterClose="{{_popover.afterClose}}"
			@ui5-afterOpen="{{_popover.afterOpen}}"
			header-text="Pick Time"
			class="sapMTimePickerPopover"
	>
		{{#if shouldBuildHoursSlider}}
			<ui5-slider 
				label = "Hours"
				._items="{{hoursArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-hours-slider"
			></ui5-slider>
		{{/if}}
		{{#if shouldBuildMinutesSlider}}
			<ui5-slider 
				label = "Minutes"
				._items="{{minutesArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-minutes-slider"
			></ui5-slider>
		{{/if}}
		{{#if shouldBuildSecondsSlider}}
			<ui5-slider 
				label = "Seconds"
				._items="{{secondsArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-seconds-slider"
			></ui5-slider>
		{{/if}}
		{{#if shouldBuildPeriodsSlider}}
			<ui5-slider 
				label = "Period"
				value="AM"
				._items="{{periodsArray}}"
				@click="{{handleSliderClicked}}"
				class="ui5-timepicker-period-slider"
			></ui5-slider>
		{{/if}}
			<div slot="footer">
				<ui5-button id="submit" type="Accept" @click="{{submitPickers}}">Submit</ui5-button>
				<ui5-button id="close" @click="{{closePicker}}">Close</ui5-button>
			</div>
	</ui5-popover>
</div>