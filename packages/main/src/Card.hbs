<div
	class="{{classes.main}}"
	dir="{{rtl}}"
>
	<header class="{{classes.header}}"
		@click="{{_headerClick}}"
		@keydown="{{_headerKeydown}}"
		@keyup="{{_headerKeyup}}"
		tabindex="0">
		{{#if image}}
			<img src="{{avatar}}" aria-label="Avatar" class="sapFCardAvatar sapFCardHeaderImg">
		{{/if}}
		
		{{#if icon}}
			<span role="img" aria-label="Avatar" class="sapFCardAvatar">
				<ui5-icon class="sapFCardHeaderIcon" src="{{avatar}}"></ui5-icon>
			</span>
		{{/if}}

		<div class="sapFCardHeaderText">
			{{#if heading}}
				<div class="sapFCardTitle">{{heading}}</div>
			{{/if}}

			{{#if subtitle}}
				<div class="sapFCardSubtitle ">{{subtitle}}</div>
			{{/if}}
		</div>
		<span class="sapFCardStatus">{{status}}</span>
	</header>
	<section class="sapFCardContent">
        <slot></slot>
	</section>
</div>
