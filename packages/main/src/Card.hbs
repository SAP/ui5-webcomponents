<div
	class="{{classes.main}}"
	dir="{{rtl}}"
	role="region"
	aria-labelledby="{{heading}}"
>
	<header class="{{classes.header}}"
		@click="{{_headerClick}}"
		@keydown="{{_headerKeydown}}"
		@keyup="{{_headerKeyup}}"
		tabindex="{{tabindex}}"
		role="group"
		aria-labelledby="{{_id}}-heading {{_id}}-subtitle">
		{{#if image}}
			<img src="{{avatar}}" aria-label="Avatar" class="sapFCardAvatar sapFCardHeaderImg">
		{{/if}}

		{{#if icon}}
			<span role="img" aria-label="Avatar" class="sapFCardAvatar">
				<ui5-icon class="sapFCardHeaderIcon" src="{{avatar}}"></ui5-icon>
			</span>
		{{/if}}

		<div class="sapFCardHeaderText">
			{{#if heading}}
				<div id="{{_id}}-heading" class="sapFCardTitle">{{heading}}</div>
			{{/if}}

			{{#if subtitle}}
				<div id="{{_id}}-subtitle" class="sapFCardSubtitle ">{{subtitle}}</div>
			{{/if}}
		</div>
		<span part="status" class="sapFCardStatus">{{status}}</span>
	</header>
	<section
	class="sapFCardContent"
	role="group">
        <slot></slot>
	</section>
</div>
