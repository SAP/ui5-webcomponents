<div
	class="{{classes.main}}"
	dir="{{rtl}}"
>
	{{#if hasHeader}}
		<header class="{{classes.header}}"
			@click="{{_headerClick}}"
			@keydown="{{_headerKeydown}}"
			@keyup="{{_headerKeyup}}"
			tabindex="{{tabindex}}"
			role="{{role}}">
			{{#if image}}
				<img src="{{avatar}}" aria-label="Avatar" class="ui5-card-avatar ui5-card-header-img">
			{{/if}}

			{{#if icon}}
				<span role="img" aria-label="Avatar" class="ui5-card-avatar">
					<ui5-icon class="ui5-card-header-icon" src="{{avatar}}"></ui5-icon>
				</span>
			{{/if}}

			<div class="ui5-card-header-text">
				{{#if heading}}
					<div class="ui5-card-heading">{{heading}}</div>
				{{/if}}

				{{#if subtitle}}
					<div class="ui5-card-subtitle ">{{subtitle}}</div>
				{{/if}}
			</div>
			<span part="status" class="ui5-card-status">{{status}}</span>
		</header>
	{{/if}}

	<section>
		<slot></slot>
	</section>
</div>
