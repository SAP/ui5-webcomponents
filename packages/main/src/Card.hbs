<div {{> controlData}} class="{{classes.main}}">
	<header class="{{classes.header}}"
		@click="{{ctr._headerClick}}"
		@keydown="{{ctr._headerKeydown}}"
		@keyup="{{ctr._headerKeyup}}"
		tabindex="0">
		{{#if ctr.header}}
			<slot name="{{ctr.header._slot}}"></slot>
		{{else}}

			{{#if image}}
				<img src="{{ctr.avatar}}" aria-label="Avatar" class="sapFCardAvatar sapFCardHeaderImg">
			{{/if}}

			{{#if icon}}
				<span role="img" aria-label="Avatar" class="sapFCardAvatar">
					<ui5-icon class="sapFCardHeaderIcon" src="{{ctr.avatar}}"></ui5-icon>
				</span>
			{{/if}}

			<div class="sapFCardHeaderText">
				{{#if ctr.heading}}
					<div class="sapFCardTitle">{{ctr.heading}}</div>
				{{/if}}

				{{#if ctr.subtitle}}
					<div class="sapFCardSubtitle ">{{ctr.subtitle}}</div>
				{{/if}}
			</div>
			<span class="sapFCardStatus">{{ctr.status}}</span>

		{{/if}}
	</header>
	<section class="sapFCardContent">
		{{#each ctr.content}}
			<slot name="{{this._slot}}"></slot>
		{{/each}}
	</section>
</div>