
<div class="ui5-message-view-root">
    {{#unless _hasSelectedMessage}}
        <div class="ui5-message-view-list">
            <div class="ui5-message-view-list-header">
                {{#if _hasHeaderButtons}}
                    <ui5-segmented-button @ui5-selection-change="{{_filterByMessageType}}" class="ui5-message-view-header-buttons">
                        <ui5-segmented-button-item .id="">All</ui5-segmented-button-item>
                        {{#each messageItemsByType}}
                            <ui5-segmented-button-item
                                class="{{messageDesign}}"
                                icon="{{messageIcon}}"
                                .id="{{messageType}}"
                                ?pressed="{{pressed}}">{{messageCount}}
                            </ui5-segmented-button-item>
                        {{/each}}
                    </ui5-segmented-button>
                {{/if}}
            </div> 
            <div>
                {{#if _messages}}
                <ui5-list @ui5-item-click="{{_selectListItem}}">
                    {{#each _filteredItems}}
                        {{#if visible}}
                        <ui5-li-custom
                            type="{{listItemType}}"
                            .position="{{position}}">
                            <div class="ui5-message-view-list-item">
                                <div class="ui5-message-view-list-item-icon-wrapper">
                                    <ui5-icon 
                                        name="{{messageIcon}}" 
                                        class="{{messageDesign}}">
                                    </ui5-icon>
                                </div>
                                <div class="ui5-message-view-list-item-content" data-ui5-message-view-subtitle="{{message.subtitle}}">
                                    <span class="ui5-message-view-list-item-title">{{message.heading}}</span>
                                    <div class="ui5-message-view-list-item-subtitle">{{message.subtitle}}</div>
                                </div>
                            </div>
                        </ui5-li-custom>
                        {{/if}}
                    {{/each}}
                </ui5-list>
                {{/if}}
            </div>
        </div>
    {{/unless}}
   
    {{#if _hasSelectedMessage }}
        <div class="ui5-message-view-details">
            <span class="ui5-message-view-details-icon-wrapper" ui5-data-icon="{{_selectedMessage.messageIcon}}">
                <ui5-icon name="{{_selectedMessage.messageIcon}}" class="{{_selectedMessage.messageDesign}}">
            </span>
            <div class="ui5-message-view-details-content">
                <div class="ui5-message-view-details-title">{{_selectedMessage.message.heading}}</div>
                <div class="ui5-message-view-details-description">{{_selectedMessage.message.description}}</div>
                <ui5-link href="https://google.bg" target="_blank">
                    {{moreInformationText}}
                </ui5-link>
            </div>   
        </div>
    {{/if}}
</div>
