<button {{> controlData}}
		class="{{classes.main}}"
		style="{{styles.main}}"
		disabled="{{ctr.disabled}}"
		?aria-disabled="{{ariaDisabled}}"
		tabindex="{{tabindex}}"
		{{> ariaPressed}}
	>
		{{#if ctr._iconSettings}}
			<ui5-icon
				class="{{classes.icon}}"
				src="{{ctr._iconSettings.src}}"
			></ui5-icon>
		{{/if}}

		{{#if ctr.text.length}}
			<span id="{{ctr._id}}-content" class="{{classes.text}}">
				<bdi><slot></slot></bdi>
			</span>
		{{/if}}
</button>

{{#*inline "ariaPressed"}}
	aria-pressed="{{pressed}}"
{{/inline}}
