	<div
		class="ui5-time-picker-inputs"
		@keydown="{{_onkeydown}}"
	>
	{{#each _inputs}}
		{{#if this.hasSeparator}}
		<span separator>:</span>
		{{/if}}
		<ui5-input
			id="{{this.id}}"
			type="{{../_numberType}}"
			maxlength="2"
			autocomplete="off"
			pattern="[0-9]*"
			inputmode="numeric"
			class="ui5-time-picker-numeric-input"
			.value="{{this.value}}"
			.accessibleName="{{this.label}}"
			._nativeInputAttributes={{this.attributes}}
			@focusin={{../_onfocusin}}
			@focusout={{../_onfocusout}}
			@input={{../_oninput}}
		></ui5-input>
	{{/each}}
	{{#if _periods.length}}
		<span separator> </span>
		<ui5-segmented-button
			id="{{_id}}_AmPm"
			@click={{_periodChange}}
		>
		{{#each _periods}}
    		<ui5-segmented-button-item
				?pressed={{this.pressed}}
			>
			{{this.label}}
			</ui5-segmented-button-item>
		{{/each}}
		</ui5-segmented-button>
	{{/if}}
	</div>