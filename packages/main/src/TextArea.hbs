<div
	class="ui5-textarea-root"
	style="{{styles.main}}"
	?aria-invalid="{{ariaInvalid}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
>

	{{#if growing}}
		<div style="{{styles.mirror}}" class="ui5-textarea-mirror" aria-hidden="true">
			{{#each _mirrorText}}
				{{this.text}}

				<br />
			{{/each}}
		</div>
	{{/if}}

	<textarea
		class="ui5-textarea-inner"
		placeholder="{{placeholder}}"
		?disabled="{{disabled}}"
		?readonly="{{readonly}}"
		?required="{{required}}"
		maxlength="{{_exceededTextProps.calcedMaxLength}}"
		aria-labelledby="{{ariaLabelledBy}}"
		.value="{{value}}"
		@input="{{_oninput}}"
		@change="{{_onchange}}"
		@keyup="{{_onkeyup}}"
		@keydown="{{_onkeydown}}"
		data-sap-focus-ref
		part="textarea">
	</textarea>

	{{#if showExceededText}}
		<span id="{{idPrefix}}-exceededText" class="ui5-textarea-exceeded-text">{{_exceededTextProps.exceededText}}</span>
	{{/if}}

	<slot name="formSupport"></slot>
</div>
