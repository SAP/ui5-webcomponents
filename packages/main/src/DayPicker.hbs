<div
	class="ui5-dp-root"
	style="{{styles.wrapper}}"
	@keydown={{_onkeydown}}
	@keyup={{_onkeyup}}
	@mousedown={{_onmousedown}}
	@mouseup={{_onmouseup}}
>
	
	<div id="{{_id}}-content" class="ui5-dp-content" role="grid" aria-roledescription="Calendar">
		<div role="row" class="ui5-dp-days-names-container">
			{{#each _dayNames}}
				<div
					id={{this.id}}
					role="columnheader"
					aria-label="{{this.name}}"
					class="{{this.classes}}">
					{{this.ultraShortName}}
				</div>
			{{/each}}
		</div>
		{{#each _weeks}}
			{{#if this.length}}
				<div style="display: flex;" role="row"  @mouseover="{{../_onitemmouseover}}">
					{{#each this}}
						{{#if this.timestamp}}
							<div
								id="{{this.id}}"
								tabindex="{{this._tabIndex}}"
								data-sap-timestamp="{{this.timestamp}}"
								data-sap-index="{{this._index}}"
								role="gridcell"
								aria-selected="{{this.selected}}"
								aria-label="{{this.ariaLabel}}"
								aria-disabled="{{this.ariaDisabled}}"
								class="{{this.classes}}">
									<span
										class="ui5-dp-daytext"
										data-sap-timestamp="{{this.timestamp}}"
										data-sap-index="{{this._index}}">
											{{this.iDay}}
									</span>
							</div>
						{{else}}
							{{#unless this.isHidden}}
									<div class="ui5-dp-weekname-container"
										role="rowheader"
										aria-label="Calendar Week {{this.weekNum}}">
											<span class="ui5-dp-weekname">{{this.weekNum}}</span>
									</div>
							{{/unless}}
						{{/if}}
					{{/each}}
				</div>
			{{else}}
				<div class="sapWCEmptyWeek"></div>
			{{/if}}
		{{/each}}
	</div>
</div>
