{{#if showSuggestions}}
	<ui5-responsive-popover
		show-header-title
		show-confirm-button
		disable-initial-focus
	>
		<ui5-list separators="Inner">
			{{#each suggestionsTexts}}
				<ui5-li
					?icon="{{this.icon}}"
					?selected="{{active}}"
					@ui5-_itemPress="{{ fnOnSuggestionItemPress }}" 
				>{{ this.text }}</ui5-li>
			{{/each}}
		</ui5-list>
		<div slot="header" class="ui5-input-host">
			<div class="ui5-input-root">
				<div class="ui5-input-content">
					<input
						class="ui5-input-inner-phone"
						type="{{inputType}}"
						.value="{{value}}"
						inner-input
						placeholder="{{placeholder}}"
						@input="{{_handleInput}}"
						@change="{{_handleChange}}"
						@keydown="{{_onkeydown}}"
						@keyup="{{_onkeyup}}"
					/>
				</div>
			</div>
		</div>
	</ui5-responsive-popover>
{{/if}}