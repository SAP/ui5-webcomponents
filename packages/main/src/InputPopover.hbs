<ui5-popover
	placement-type="Bottom"
	no-arrow
	horizontal-align="Stretch"
	initial-focus={{ this.id }}>

	{{#if shouldDisplayValueStateMessage}}
		<div slot="header" class="{{classes.popoverValueState}}">
			{{#each valueStateMessageText}}
				{{this}}
			{{/each}}
		</div>
	{{/if}}

	{{#if suggestionsTexts.length}}		
	<ui5-list id="listPopover" separators="Inner">
		{{#each suggestionsTexts}}
			<ui5-li @ui5-_itemPress="{{ fnOnSuggestionItemPress }}">{{ this }}</ui5-li>
		{{/each}}
	</ui5-list>
	{{/if}}
</ui5-popover>