<div class="ui5-combobox-root ui5-input-focusable-element">
	{{#if hasValueState}}
		<span id="value-state-description" class="ui5-hidden-text">{{ariaValueStateHiddenText}}</span>
	{{/if}}

	<input id="ui5-combobox-input"
		.value="{{value}}"
		inner-input
		placeholder="{{placeholder}}"
		?disabled={{disabled}}
		?readonly={{readonly}}
		value-state="{{valueState}}"
		@keydown="{{_keydown}}"
		@input="{{_input}}"
		@change="{{_inputChange}}"
		@click={{_click}}
		@keyup="{{_keyup}}"
		@focusin="{{_focusin}}"
		@focusout="{{_focusout}}"
		aria-expanded="{{open}}"
		role="combobox"
		aria-haspopup="listbox"
		aria-autocomplete="both"
		aria-describedby="value-state-description"
		aria-label="{{ariaLabelText}}"
		aria-required="{{required}}"
		data-sap-focus-ref
	/>

	{{#if _effectiveShowClearIcon}}
		<div @click={{_clear}} class="ui5-input-clear-icon-wrapper" input-icon tabindex="-1">
			<ui5-icon tabindex="-1" class="ui5-input-clear-icon" name="decline" accessible-name="{{clearIconAccessibleName}}"></ui5-icon>
		</div>
	{{/if}}

	{{#if icon}}
		<slot name="icon"></slot>
	{{/if}}

	{{#unless readonly}}
		<ui5-icon
			name="slim-arrow-down"
			slot="icon"
			tabindex="-1"
			input-icon
			?pressed="{{_iconPressed}}"
			@click="{{_arrowClick}}"
			accessible-name="{{_iconAccessibleNameText}}"
		></ui5-icon>
	{{/unless}}
</div>
