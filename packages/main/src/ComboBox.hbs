<div class="ui5-combobox-root">
	<input id="ui5-combobox-input"
		.value="{{_tempValue}}"
		inner-input
		placeholder="{{placeholder}}"
		?disabled={{disabled}}
		?readonly={{readonly}}
		?required={{required}}
		value-state="{{valueState}}"
		@input="{{_input}}"
		@change="{{_inputChange}}"
		@click={{_click}}
		@keydown="{{_keydown}}"
		@focusin="{{_focusin}}"
		@focusout="{{_focusout}}"
		role="combobox"
		aria-haspopup="listbox"
		aria-expanded="{{open}}"
		aria-autocomplete="both"
	    aria-activedescendant="{{ariaActiveDescendant}}"
		aria-controls="{{ariaControls}}"
		aria-describedby="{{ariaDescribedBy}}"
	/>

	{{#unless readonly}}
		<ui5-icon
			name="slim-arrow-down"
			slot="icon"
			tabindex="-1"
			input-icon
			?pressed="{{_iconPressed}}"
			@click="{{_arrowClick}}"
			dir="{{dir}}"
			accessibleName="Select Options"
		></ui5-icon>
	{{/unless}}
</div>