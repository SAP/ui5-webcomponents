<div class="ui5-combobox-root">
	{{#if hasValueState}}
		<span id="{{_id}}-valueStateDesc" class="ui5-hidden-text">{{valueStateText}}</span>
	{{/if}}

	<input id="ui5-combobox-input"
		.value="{{_tempValue}}"
		inner-input
		placeholder="{{placeholder}}"
		?disabled={{disabled}}
		?readonly={{readonly}}
		?required={{required}}
		value-state="{{valueState}}"
		@input="{{_input}}"
		@change="{{_inputChange}}"
		@click={{_click}}
		@keydown="{{_keydown}}"
		@focusin="{{_focusin}}"
		@focusout="{{_focusout}}"
		aria-expanded="{{open}}"
		role="{{accInfo.role}}"
		aria-haspopup="{{accInfo.ariaHasPopup}}"
		aria-autocomplete="{{accInfo.ariaAutoComplete}}"
		aria-controls="{{accInfo.ariaControls}}"
		aria-describedby="{{accInfo.ariaDescribedBy}}"
	/>

	{{#unless readonly}}
		<ui5-icon
			name="slim-arrow-down"
			slot="icon"
			tabindex="-1"
			input-icon
			?pressed="{{_iconPressed}}"
			@click="{{_arrowClick}}"
			dir="{{dir}}"
			accessibleName="Select Options"
		></ui5-icon>
	{{/unless}}
</div>