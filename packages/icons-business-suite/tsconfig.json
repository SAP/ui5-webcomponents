{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "es2022",
		// Generate d.ts files
		"declaration": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"module": "es2022",
      	"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
	},
}
