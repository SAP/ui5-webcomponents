{
    "include": ["_stories/**/*", ".storybook/**/*", "global.d.ts", "build-scripts-storybook/**/*"],
    "compilerOptions": {
        "target": "ES2021",
        // Generate d.ts files
        "declaration": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "moduleResolution": "node",
    		"resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
    }
}
