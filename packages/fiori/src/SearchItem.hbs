<li
	part="native-li"
	data-sap-focus-ref
	tabindex="{{_effectiveTabIndex}}"
	class="{{classes.main}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@keyup="{{_onkeyup}}"
	@keydown="{{_onkeydown}}"
	draggable="{{movable}}"
	@click="{{_onclick}}"
>
	<div part="content" class="ui5-search-item-content">
		<div class="ui5-search-item-begin-content">
			{{#if _hasAvatar}}
				<slot name="avatar"></slot>
			{{else if icon}}
				<ui5-icon class="ui5-search-item-icon" name="{{icon}}"></ui5-icon>
			{{/if}}

			{{#if scopeName}}
				<ui5-tag design="Set2" color-scheme="10">
					{{scopeName}}
				</ui5-tag>
			{{/if}}

			<div class="ui5-search-item-titles-container">
				<span part="title" class="ui5-search-item-heading">{{{_markupText}}}</span>

				{{#if subheadingText}}
					<div class="ui5-search-item-byline-container">
						<span part="subheading" class="ui5-search-item-subheading">{{subheadingText}}</span>

						{{#if additionalText}}
							<span class="ui5-search-item-additionalText">{{additionalText}}</span>
						{{/if}}
					</div>
				{{/if}}
			</div>
			{{#if selected}}
				<ui5-button class="ui5-search-item-selected-delete" design="Transparent" icon="decline"></ui5-button>
			{{/if}}
		</div>
	</div>

</li>
