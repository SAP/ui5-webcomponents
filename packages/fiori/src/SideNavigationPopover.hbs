<ui5-navigation-menu
	id="{{_id}}-side-navigation-overflow-menu"
	@ui5-before-open="{{_onBeforeMenuOpen}}"
	@ui5-before-close="{{_onBeforeMenuClose}}"
	@ui5-item-click="{{handleOverflowItemClick}}"
	class="ui5-side-navigation-popover ui5-side-navigation-overflow-menu">
	{{#each _menuPopoverItems}}
		<ui5-navigation-menu-item
			text="{{text}}"
			icon="{{icon}}"
			?disabled="{{disabled}}"
			expanded="true"
			href="{{href}}"
			target="{{target}}"
			title="{{title}}"
			.associatedItem="{{this}}">
				{{#each this.items}}
				<ui5-navigation-menu-item
					text="{{text}}"
					icon="{{icon}}"
					?disabled="{{disabled}}"
					.associatedItem="{{this}}"
					expanded="true"
					href="{{href}}"
					target="{{target}}"
					title="{{title}}">
				</ui5-navigation-menu-item>
				{{/each}}
		</ui5-navigation-menu-item>
	{{/each}}
</ui5-navigation-menu>
<ui5-responsive-popover
	vertical-align="Top"
	class="ui5-side-navigation-popover"
	accessible-name-ref="{{_id}}-sideNavigationPopoverText"
	@ui5-open="{{_onAfterPopoverOpen}}"
	@ui5-before-open="{{_onBeforePopoverOpen}}"
	@ui5-before-close="{{_onBeforePopoverClose}}"
>
    {{#if _popoverContents.item}}
	<span id="{{_id}}-sideNavigationPopoverText" class="ui5-hidden-text">{{accSideNavigationPopoverHiddenText}}</span>
		<ui5-side-navigation
			in-popover
			class="ui5-side-navigation-in-popover"
		>
			<ui5-side-navigation-item
				text="{{_popoverContents.item.text}}"
				tooltip="{{_popoverContents.item._tooltip}}"
				href="{{_popoverContents.item._href}}"
				target="{{_popoverContents.item._target}}"
				?disabled="{{_popoverContents.item.disabled}}"
				expanded="true"
				_fixed="true"
				?selected="{{_popoverContents.item.selected}}"
				@ui5-click="{{handlePopupItemClick}}"
				.associatedItem="{{_popoverContents.item}}"
			>
			{{#each _popoverContents.subItems}}
				<ui5-side-navigation-sub-item
					text="{{this.text}}"
					tooltip="{{this._tooltip}}"
					href="{{this._href}}"
					target="{{this._target}}"
					?disabled="{{this.disabled}}"
					?selected="{{this.selected}}"
					@ui5-click="{{handlePopupItemClick}}"
					.associatedItem="{{this}}"
				></ui5-side-navigation-sub-item>
			{{/each}}
			</ui5-side-navigation-item>
		</ui5-side-navigation>
    {{/if}}
</ui5-responsive-popover>