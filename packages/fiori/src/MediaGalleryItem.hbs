<div id="{{id}}"
    tabindex="{{tabIndex}}"
    class="ui5-media-gallery-item-root"
    @focusout="{{_onfocusout}}"
    @focusin="{{_onfocusin}}"
    @mousedown="{{_onmousedown}}"
    @keydown="{{_onkeydown}}"
    @keyup="{{_onkeyup}}"
>
    <div class="ui5-media-gallery-item-mask-layer"></div>
    <div class="ui5-media-gallery-item-wrapper" style="{{styles.wrapper}}">
        {{#if _showBackgroundIcon}}
            <ui5-icon name="background"/>
        {{/if}}
        {{#if _useContent}}
            <slot/>
        {{/if}}
        {{#if _useThumbnail}}
            <slot name="thumbnail"/>
        {{/if}}
    </div>
</div>

