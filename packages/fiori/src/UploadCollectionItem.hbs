{{>include "../../main/src/ListItem.hbs"}}

{{#*inline "imageBegin"}}
	{{#if image}}
		<img src="{{image}}" class="ui5-uci-img">
	{{/if}}
{{/inline}}

{{#*inline "iconBegin"}}
	{{#if icon}}
		<ui5-icon name="{{icon}}" class="ui5-uci-icon"></ui5-icon>
	{{/if}}
{{/inline}}

{{#*inline "listItemContent"}}
	<div class="ui5-uci-content-text-container">
		<div>{{fileName}}</div>
		<slot></slot>
	</div>
	<div class="ui5-uci-content-buttons-container">
		{{#if editable}}
			<ui5-button
				icon="edit"
				design="Transparent"
				@click="{{_onEdit}}"
			>
			</ui5-button>
		{{/if}}
	</div>
{{/inline}}
