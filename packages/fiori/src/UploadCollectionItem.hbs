{{>include "../../main/src/ListItem.hbs"}}

{{#*inline "listItemContent"}}
	<div class="uci-thumbnail">
		<slot name="thumbnail"></slot>
	</div>
	<div class="ui5-uci-content-text-container">
		<div>{{fileName}}</div>
		<slot></slot>
	</div>
	<div class="ui5-uci-content-buttons-container">
		{{#if editable}}
			<ui5-button
				icon="edit"
				design="Transparent"
				@click="{{_onEdit}}"
			>
			</ui5-button>
		{{/if}}
	</div>
{{/inline}}
