{{>include "../../main/src/ListItem.hbs"}}

{{#*inline "listItemContent"}}
	<div class="ui5-uci-thumbnail">
		<slot name="thumbnail"></slot>
	</div>
	<div class="ui5-uci-content-container">
		{{#if fileNameClickable}}
			<ui5-link class="ui5-uci-file-name">{{fileName}}</ui5-link>
		{{else}}
			<span class="ui5-uci-file-name">{{fileName}}</span>
		{{/if}}
		<div class="ui5-uci-description">
			<slot></slot>
		</div>
	</div>
	<div class="ui5-uci-content-buttons-container">
		{{#if editable}}
			<ui5-button
				icon="edit"
				design="Transparent"
				@click="{{_onEdit}}"
			>
			</ui5-button>
		{{/if}}
	</div>
{{/inline}}
