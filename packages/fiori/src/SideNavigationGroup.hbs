{{#if sideNavCollapsed}}
	<div></div>
{{else}}
	{{> treeitem }}
{{/if}}

{{#*inline treeitem}}
	<li id="{{_id}}" class="ui5-sn-list-li" role="none">
		<div class="ui5-sn-item ui5-sn-item-level1 {{_classes}}"
			 role="treeitem"
			 data-sap-focus-ref
			 @keydown="{{_onkeydown}}"
			 @keyup="{{_onkeyup}}"
			 @click="{{_onclick}}"
			 @focusin="{{_onfocusin}}"
			 tabindex="{{_effectiveTabIndex}}"
			 aria-expanded="{{_expanded}}"
			 title="{{_tooltip}}"
			 aria-owns="{{_groupId}}"
		>
			<div class="ui5-sn-item-text">{{text}}</div>
			{{#if items.length}}
				<ui5-icon class="ui5-sn-item-toggle-icon"
						  name="{{_toggleIconName}}"
				></ui5-icon>
			{{/if}}
		</div>
		{{#if items.length}}
			<ul id="{{_groupId}}"
				class="ui5-sn-item-group"
				aria-label="{{text}}"
				role="group"
			>
				<slot></slot>
			</ul>
		{{/if}}
	</li>
{{/inline}}