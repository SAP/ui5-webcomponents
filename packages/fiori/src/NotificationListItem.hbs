<li
	class="ui5-nli-root ui5-nli-focusable"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@click="{{_onclick}}"
	role="listitem"
	tabindex="{{forcedTabIndex}}"
	aria-labelledby="{{ariaLabelledBy}}"
>
	<div class="ui5-nli-actions">
		{{#if showMenu}}
			<ui5-button
				icon="overflow"
				design="Transparent"
				@click="{{_onBtnMenuClick}}"
				class="ui5-nli-menu-btn"
				tooltip="{{menuBtnAccessibleName}}"
				aria-label="{{menuBtnAccessibleName}}"
			></ui5-button>
		{{/if}}
		{{#if showClose}}
			<ui5-button
				icon="decline"
				design="Transparent"
				@click="{{_onBtnCloseClick}}"
				tooltip="{{closeBtnAccessibleName}}"
				aria-label="{{closeBtnAccessibleName}}"
				close-btn
			></ui5-button>
		{{/if}}
	</div>
	<div class="ui5-nli-content">
		<div class="ui5-nli-title-text-wrapper">
			{{#if hasState}}
				<ui5-icon
					class="ui5-state-icon ui5-state-icon--{{statusIcon}}"
					name="{{statusIcon}}">
				</ui5-icon>
			{{/if}}

			<div id="{{_id}}-title-text" class="ui5-nli-title-text" part="title-text">
				{{titleText}}
			</div>
		</div>

		{{#if hasDesc}}
			<div id="{{_id}}-description" class="ui5-nli-description">
				<slot></slot>
			</div>
		{{/if}}

		<div id="{{_id}}-footer" class="ui5-nli-footer">
			{{#each footerItems}}
				<slot name="{{slotName}}"></slot>
				{{#if showDivider}}
					<div class="ui5-nli-footer-divider" aria-hidden="true">Â·</div>
				{{/if}}
			{{/each}}

			<ui5-link
				class="ui5-nli-footer-showMore"
				?hidden="{{hideShowMore}}"
				@ui5-click="{{_onShowMoreClick}}"
				aria-hidden="true"
				href="#" {{!--without href ENTER does not trigger click --}}
				showMore-btn
			>
				{{showMoreText}}
			</ui5-link>
		</div>

		{{#if hasImportance}}
			<ui5-badge class="ui5-nli-importance" design="Set2" color-scheme="2">
				<ui5-icon name="high-priority" slot="icon"></ui5-icon>
				{{importanceText}}
			</ui5-badge>
		{{/if}}

		<span id="{{_id}}-invisibleText" class="ui5-hidden-text">{{accInvisibleText}}</span>
	</div>

	<div class="ui5-nli-avatar">
		<slot name="avatar"></slot>
	</div>

	<slot name="menu"></slot>

	{{#if busy}}
		<ui5-busy-indicator
				delay="{{busyDelay}}"
				active
				class="ui5-nli-busy"
				data-sap-focus-ref
		></ui5-busy-indicator>
	{{/if}}
</li>