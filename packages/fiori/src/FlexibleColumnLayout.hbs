<div class="{{classes.root}}">
	<div
		role="{{_accAttributes.columns.start.role}}"
		aria-hidden="{{_accAttributes.columns.start.ariaHidden}}"
		class="{{classes.columns.start}}"
		aria-labelledby="{{_id}}-startColumnText"
	>
		<span id="{{_id}}-startColumnText" class="ui5-hidden-text">{{accStartColumnText}}</span>
		<slot name="startColumn" aria-hidden="{{_accAttributes.columns.middle.ariaHidden}}"></slot>
	</div>

	<div role="{{accStartArrowContainerRole}}" aria-label={{accStartArrowContainerText}} class="ui5-fcl-grip-container ui5-fcl-grip-container-start" style="{{styles.arrowsContainer.start}}" tabindex="{{startSeparatorTabIndex}}"
		@mousedown="{{handleDown}}" @touchstart="{{handleDown}}" @keydown="{{_onkeydown}}">
		{{> startArrow}}
	</div>

	<div
		role="{{_accAttributes.columns.middle.role}}"
		aria-hidden="{{_accAttributes.columns.middle.ariaHidden}}"
		class="{{classes.columns.middle}}"
		aria-labelledby="{{_id}}-midColumnText"
	>
		<span id="{{_id}}-midColumnText" class="ui5-hidden-text">{{accMiddleColumnText}}</span>
		<slot name="midColumn" aria-hidden="{{_accAttributes.columns.middle.ariaHidden}}"></slot>
	</div>

	<div role="{{accEndArrowContainerRole}}" aria-label="{{accEndArrowContainerText}}" class="ui5-fcl-grip-container ui5-fcl-grip-container-end" style="{{styles.arrowsContainer.end}}" tabindex="{{endSeparatorTabIndex}}"
		@mousedown="{{handleDown}}" @touchstart="{{handleDown}}" @keydown="{{_onkeydown}}">
		{{> endArrow}}
	</div>

	<div
		role="{{_accAttributes.columns.end.role}}"
		aria-hidden="{{_accAttributes.columns.end.ariaHidden}}"
		class="{{classes.columns.end}}"
		aria-labelledby="{{_id}}-endColumnText"
	>
		<span id="{{_id}}-endColumnText" class="ui5-hidden-text">{{accEndColumnText}}</span>
		<slot name="endColumn" aria-hidden="{{_accAttributes.columns.middle.ariaHidden}}"></slot>
	</div>
</div>

{{#*inline "startArrow"}}
	<ui5-icon
		class="ui5-fcl-grip ui5-fcl-grip--start"
		name="vertical-grip"
		style="{{styles.arrows.start}}"
		tooltip="{{accStartArrowText}}"
	></ui5-icon>
{{/inline}}


{{#*inline "endArrow"}}
	<ui5-icon
		class="ui5-fcl-grip ui5-fcl-grip--end"
		style="{{styles.arrows.end}}"
		name="vertical-grip"
		tooltip="{{accEndArrowText}}"
	></ui5-icon>
{{/inline}}
