<nav class="ui5-sn-root">
	{{> header }}

	{{#if collapsed}}
		<div role="menubar" class="ui5-sn-list ui5-sn-collapsed" aria-orientation="vertical">
			{{#each items}}
				<a id="{{_id}}"
				   class="ui5-sn-item"
				   role="menuitemradio"
				   data-sap-focus-ref
				   tabindex="{{_tabIndex}}"
				   aria-haspopup="{{_ariaHasPopup}}"
				   aria-checked="{{selected}}"
				   title="{{_tooltip}}"
				   href="#page1"
				>
					<ui5-icon class="ui5-sn-item-icon" name="{{icon}}"></ui5-icon>
					<div class="ui5-sn-item-text">{{text}}</div>
				</a>
			{{/each}}
		</div>
	{{else}}
		<ul role="tree" class="ui5-sn-list" aria-label="my tree">
			{{#each items}}
				<li id="{{_id}}" class="ui5-sn-list-li {{_collapsedClassName}}" role="none">
					<a class="ui5-sn-item"
					   role="treeitem"
					   data-sap-focus-ref
					   tabindex="{{_tabIndex}}"
					   aria-expanded="{{_expanded}}"
					   aria-current="{{_ariaCurrent}}"
					   title="{{_tooltip}}"
					   aria-owns="{{_groupId}}"
					   href="#page1"
					>
						<ui5-icon class="ui5-sn-item-icon" name="{{icon}}"></ui5-icon>
						<div class="ui5-sn-item-text">{{text}}</div>
						{{#if items.length}}
							<ui5-icon
									class="ui5-sn-item-toggle-icon"
									name="{{_toggleIconName}}"
									@click="{{_onToggleClick}}"
							></ui5-icon>
						{{/if}}
					</a>
					{{#if items.length}}
						<ul id="{{_groupId}}"
							class="ui5-sn-item-group"
							aria-label="{{text}}"
							role="group"
						>
							{{#each items}}
								<li id="{{_id}}" class="ui5-sn-list-li" role="none">
									<a class="ui5-sn-item"
									   role="treeitem"
									   data-sap-focus-ref
									   tabindex="{{_tabIndex}}"
									   aria-current="{{_ariaCurrent}}"
									   href="#page1"
									>
										<ui5-icon class="ui5-sn-item-icon" name="{{icon}}"></ui5-icon>
										<div class="ui5-sn-item-text">{{text}}</div>
									</a>
								</li>
							{{/each}}
						</ul>
					{{/if}}
				</li>
			{{/each}}
		</ul>
	{{/if}}

	<div class="ui5-sn-spacer"></div>

	{{#if collapsed}}
	{{else}}
	{{/if}}

	{{> footer }}
</nav>

{{#*inline header}}
	{{#if showHeader}}
		<slot name="header"></slot>
	{{/if}}
{{/inline}}

{{#*inline footer}}{{/inline}}
