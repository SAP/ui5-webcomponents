<nav class="ui5-sn-root {{classes.root}}" role="{{_rootRole}}">
	{{> header }}

	{{#if collapsed}}
		<div role="menubar"
			 class="ui5-sn-list ui5-sn-flexible"
			 aria-orientation="vertical"
			 aria-roledescription="{{ariaRoleDescNavigationList}}"
		>
			<slot></slot>
			<ui5-side-navigation-item
					is-overflow
					id="{{_id}}-sn-overflow-item"
					text="{{overflowAccessibleName}}"
					@click="{{_handleOverflowClick}}"
					class="ui5-sn-item-overflow"
					side-nav-collapsed
					icon="overflow">
			</ui5-side-navigation-item>
		</div>
	{{else}}
		<ul role="tree"
			class="ui5-sn-list ui5-sn-flexible"
			aria-roledescription="{{ariaRoleDescNavigationList}}"
		>
			<slot></slot>
		</ul>
	{{/if}}

	{{#if hasFixedItems}}
		<div role="separator" class="ui5-sn-spacer"></div>
		{{#if collapsed}}
			<div role="menubar"
				 class="ui5-sn-list ui5-sn-fixed"
				 aria-orientation="vertical"
				 aria-roledescription="{{ariaRoleDescNavigationList}}"
			>
				<slot name="fixedItems"></slot>
			</div>
		{{else}}
			<ul role="tree"
				class="ui5-sn-list ui5-sn-fixed"
				aria-roledescription="{{ariaRoleDescNavigationList}}"
			>
				<slot name="fixedItems"></slot>
			</ul>
		{{/if}}
	{{/if}}
</nav>

{{#*inline header}}
	{{#if showHeader}}
		<slot name="header"></slot>
	{{/if}}
{{/inline}}
