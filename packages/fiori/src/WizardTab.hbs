<div class="ui5-wiz-step-root"
	role="listitem"
	tabindex="{{tabIndex}}"
	aria-current="{{accInfo.ariaCurrent}}"
	aria-setsize="{{accInfo.ariaSetsize}}"
	aria-posinset="{{accInfo.ariaPosinset}}"
	aria-disabled="{{accInfo.ariaDisabled}}"
	aria-label="{{accInfo.ariaLabel}}"
	@click="{{_onclick}}"
	@keydown="{{_onkeydown}}"
	@keyup="{{_onkeyup}}"
	@focusin="{{_onfocusin}}"
>
	<div class="ui5-wiz-step-main">
		<div class="ui5-wiz-step-icon-circle">
			{{#if icon}}
				<ui5-icon class="ui5-wiz-step-icon" name="{{icon}}"></ui5-icon>
			{{else}}
				<span class="ui5-wiz-step-number">{{number}}</span>
			{{/if}}
		</div>
		{{#if hasTexts}}
			<div class="ui5-wiz-step-texts">
				<div class="ui5-wiz-step-title-text">{{titleText}}</div>
				<div class="ui5-wiz-step-subtitle-text">{{subtitleText}}</div>
			</div>
		{{/if}}
	</div>

	{{#unless hideSeparator}}
		<div class="ui5-wiz-step-hr"></div>
	{{/unless}}
</div>