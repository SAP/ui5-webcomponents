<ui5-popover 
	hide-arrow
	prevent-focus-restore
	prevent-initial-focus
	placement="Bottom"
	horizontal-align="Start"
	?open="{{_open}}"
	.opener="{{this}}"
	@ui5-close="{{_handleClose}}"
	class="ui5-search-popover"
>

	{{#if _showIllustration}}
		<slot name="illustration"></slot>
	{{else if _showLoading}}
		<ui5-busy-indicator class="ui5-search-popover-loading-bi" active></ui5-busy-indicator>
	{{else}}
		{{#if _showHeader}}
			<header slot="header" class="ui5-search-popover-header">
				<ui5-title size="H6">{{headerText}}</ui5-title>
				<ui5-text class="ui5-search-popover-subheader"><i>{{subheaderText}}</i></ui5-text>
			</header>
		{{/if}}

		<main>
			<ui5-list class="ui5-search-list" @ui5-load-more="{{_handleMore}}" separators="None" growing-button-text="{{moreButtonText}}" growing="{{_effectiveGrowing}}" @keydown="{{_onItemKeydown}}">
				<slot></slot>
			</ui5-list>
		</main>
	{{/if}}
</ui5-popover>