<li
	class="ui5-nli-group-root ui5-nli-focusable"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@keydown="{{_onkeydown}}"
	tabindex="{{forcedTabIndex}}"
	aria-labelledby="{{ariaLabelledBy}}"
	aria-description="{{accInvisibleText}}"
>
	<div class="ui5-nli-group-header" @click="{{_onHeaderToggleClick}}" @keydown="{{_onkeydown}}">
		<ui5-button
			icon={{groupCollapsedIcon}}
			design="Transparent"
			@click="{{_onBtnToggleClick}}"
			class="ui5-nli-group-toggle-btn"
			tooltip="{{toggleBtnAccessibleName}}"
			role="button"
			.accessibilityAttributes={{accInfo.accessibilityAttributes}}
		></ui5-button>
		<div
			id="{{_id}}-title-text"
			class="ui5-nli-group-title-text"
			part="title-text"
			role="heading"
			aria-level="2">
			{{titleText}}
		</div>

		<div class="ui5-nli-group-divider"></div>
	</div>

	<ui5-list
		id="{{_id}}-notificationsList"
		class="ui5-nli-group-items"
		role="list"
		aria-labelledby="{{_id}}-title-text">
		<slot></slot>
	</ui5-list>

	{{#if busy}}
		<ui5-busy-indicator
				delay="{{busyDelay}}"
				active
				class="ui5-nli-busy"
		></ui5-busy-indicator>
	{{/if}}
</li>