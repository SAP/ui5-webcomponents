<li
	class="ui5-nli-group-root ui5-nli-focusable"
	@focusin="{{_onfocusin}}"
	@keydown="{{_onkeydown}}"
	tabindex="{{forcedTabIndex}}"
	aria-labelledby="{{ariaLabelledBy}}"
	aria-description="{{accInvisibleText}}"
	aria-level="1"
>
	<div class="ui5-nli-group-header"
		@click="{{_onHeaderToggleClick}}"
		@keydown="{{_onkeydown}}"
		role="button"
		aria-expanded="{{_ariaExpanded}}"
		aria-controls="{{_id}}-notificationsList"
		title="{{toggleIconAccessibleName}}">
		<ui5-icon
			name={{groupCollapsedIcon}}
			class="ui5-nli-group-toggle-icon"
			mode="Decorative"
		></ui5-icon>
		<div
			id="{{_id}}-title-text"
			class="ui5-nli-group-title-text"
			part="title-text"
			role="heading"
			aria-level="2">
			{{titleText}}
		</div>

		{{#if isLoading}}
			<span id="{{_id}}-loading" class="ui5-hidden-text">{{loadingText}}</span>
		{{/if}}

		<div class="ui5-nli-group-divider"></div>
	</div>

	<ui5-notification-group-list
		id="{{_id}}-notificationsList"
		class="ui5-nli-group-items"
		role="list"
		aria-labelledby="{{_id}}-title-text">
		<slot></slot>
	</ui5-notification-group-list>

	{{#if loading}}
		<ui5-busy-indicator
				delay="{{loadingDelay}}"
				active
				class="ui5-nli-loading"
		></ui5-busy-indicator>
	{{/if}}
</li>