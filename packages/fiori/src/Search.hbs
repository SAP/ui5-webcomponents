{{#if expanded}}
	<div class="ui5-search-root">
		<div class="ui5-search-content">
			{{#if showScope}}
				<slot name="scope"></slot>
				<div class="ui5-search-separator"></div>
			{{/if}}

			<input
				class="ui5-search-inner-input"
				.value="{{value}}"
				placeholder="{{placeholder}}"
				data-sap-focus-ref
				@input="{{_handleInput}}"
				@focusin="{{_onfocusin}}"
				@focusout="{{_onfocusout}}"
				@keydown="{{_onkeydown}}"/>

			{{#if _effectiveShowClearIcon}}
				<ui5-icon
					class="ui5-shell-search-clear-icon"
					name="decline"
					mode="Interactive"
					@click={{_handleClear}}
				></ui5-icon>
			{{/if}}

			<ui5-button
				class="ui5-shell-search-input-button"
				icon="search"
				design={{_searchDesign}}
				@click={{_handleSearchIconPress}}
			></ui5-button>
		</div>
	</div>
{{else}}
	<ui5-button
		class="ui5-shell-search-input-button"
		icon="sap-icon://search"
		data-sap-focus-ref
		@click={{_handleSearchIconPress}}
	></ui5-button>
{{/if}}