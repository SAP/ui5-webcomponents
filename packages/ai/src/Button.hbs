<ui5-split-button
	class="ui5-ai-button-inner"
	design="{{design}}"
	icon={{_stateIcon}}
	_end-icon={{_stateEndIcon}}
	?disabled="{{disabled}}"
	._hideArrowButton={{_hideArrowButton}}
	@ui5-click={{_onClick}}
	@ui5-arrow-click={{_onArrowClick}}
>
	{{#if _hasText}}
		<div class="ui5-ai-button-text">{{_stateText}}</div>
	{{/if}}
</ui5-split-button>

<ui5-split-button
	class="ui5-ai-button-hidden"
	design="{{design}}"
	icon={{_stateIcon}}
	_end-icon={{_stateEndIcon}}
></ui5-split-button>
