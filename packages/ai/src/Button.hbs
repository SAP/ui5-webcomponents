<ui5-button
	class="ui5-ai-button-inner"
	design="{{design}}"
	icon={{_stateIcon}}
	end-icon={{_stateEndIcon}}
	?disabled="{{disabled}}"
	@click={{_onclick}}
>
	{{#if _hasText}}
		<div class="ui5-ai-button-text">{{_stateText}}</div>
	{{/if}}
</ui5-button>

<ui5-button
	class="ui5-ai-button-hidden"
	design="{{design}}"
></ui5-button>
